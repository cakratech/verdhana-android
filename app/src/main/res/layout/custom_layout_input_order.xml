            android:text="7.900"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_side_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="ly_1, ly_2, ly_3, ly_4, ly_5, ly_6, ly_7"
        android:visibility="gone"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:flow_maxElementsWrap="1"
        app:flow_wrapMode="aligned"
        app:constraint_referenced_ids="btn_add_10, btn_add_50, btn_add_100, btn_add_half, btn_add_third,
        btn_add_quarter,btn_add_fifth, btn_add_limit, btn_add_cash"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_volume"
