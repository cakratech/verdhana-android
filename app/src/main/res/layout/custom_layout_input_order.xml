        app:layout_constraintTop_toBottomOf="@id/ly_3"
        app:layout_constraintBottom_toTopOf="@id/ly_5">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_val_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="body"
            android:text="9.725"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_val_6"
            android:layout_width="wrap_content"
