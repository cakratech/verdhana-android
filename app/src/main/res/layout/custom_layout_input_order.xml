    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/borderline"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_volume"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/borderline"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_volume"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/borderline"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_volume"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_volume"
        app:layout_constraintBottom_toTopOf="@id/ly_2">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_l_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="body"
            android:text="L.High"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_l_high_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:text="11.125"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_1"
        app:layout_constraintBottom_toTopOf="@id/ly_3">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_val_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
