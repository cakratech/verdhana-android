        app:btnStyle="outlineGrey"
        android:text="Limit"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints" />


    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:id="@+id/btn_add_cash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:btnStyle="outlineGrey"
        android:text="Cash"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_side_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="btn_add_10, btn_add_50, btn_add_100, btn_add_half, btn_add_third,
        btn_add_quarter, btn_add_fifth, btn_add_limit, btn_add_cash"
        android:visibility="visible"/>

