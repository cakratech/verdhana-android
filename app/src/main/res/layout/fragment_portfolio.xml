<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmPortfolio"
            type="com.bcasekuritas.mybest.app.feature.portfolio.PortfolioViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <!-- layout no portfolio/ empty portfolio -->
        <LinearLayout
            android:id="@+id/ly_portfolio_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:backgroundTint="#e0e0e0"
                android:background="@drawable/bg_layout_border_10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You don't have any portfolio yet"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have never invested in any stock yet"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discover Stocks"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

        <!-- layout portfolio -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_portfolio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ly_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_f0f5f8_19"
                android:paddingVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:txtFor="body"
                    app:txtStyle="softBold"
                    android:background="@drawable/bg_f0f5f8_16"
                    tools:text="123456 - Jonathan Doe"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bot_row"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    app:tint="#AE000000" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_share_portfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share_outline"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/ly_user_id"
                app:layout_constraintBottom_toBottomOf="@id/ly_user_id"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_portfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorFullWidth="true"
                app:tabIndicatorHeight="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/bgWhite"
                app:tabIndicatorColor="@color/bgBCABlue"
                style="@style/Widget.App.TabLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ly_user_id">

            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_portfolio"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tab_layout_portfolio"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="tab_layout_portfolio, view_pager_portfolio, ly_user_id"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
