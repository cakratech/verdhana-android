<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_16"
        android:paddingTop="24dp">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:text="Do you want to download Report?"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="title"
            app:txtStyle="softBold"/>

        <View
            android:id="@+id/divider_title"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/borderline"
            app:layout_constraintTop_toTopOf="@id/btn_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider_button"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/borderline"
            app:layout_constraintStart_toStartOf="@id/btn_ok"
            app:layout_constraintTop_toTopOf="@id/btn_ok"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Cancel"
            app:btnStyle="transBlue"
            app:layout_constraintTop_toTopOf="@id/btn_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_ok"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            tools:text="OK"
            app:btnStyle="transBlue"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>