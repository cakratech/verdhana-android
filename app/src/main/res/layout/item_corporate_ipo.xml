<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_ipo_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_building"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_ipo_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="body"
            android:text="Fri, 20 Jul 2023"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/iv_ipo_company"
            app:layout_constraintTop_toTopOf="@id/iv_ipo_company"
            app:layout_constraintBottom_toBottomOf="@id/iv_ipo_company"/>

        <ImageView
            android:id="@+id/iv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:src="@drawable/ic_calendar_cal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ipo_company"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_date_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="body"
            android:text="Fri, 20 Jul 2023"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_date"
            app:layout_constraintTop_toTopOf="@id/iv_date"
            app:layout_constraintBottom_toBottomOf="@id/iv_date"/>

        <ImageView
            android:id="@+id/iv_ipo_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar_serial"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_date"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_ipo_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:txtFor="body"
            android:text="1.123.123"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/iv_ipo_qty"
            app:layout_constraintTop_toTopOf="@id/iv_ipo_qty"
            app:layout_constraintBottom_toBottomOf="@id/iv_ipo_qty"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_ipo_view_ipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="view E-IPO"
            app:btnStyle="primary"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ipo_qty"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>