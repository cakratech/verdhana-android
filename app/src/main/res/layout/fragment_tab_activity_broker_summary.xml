<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmActivityTabBrokerSummary"
            type="com.bcasekuritas.mybest.app.feature.brokersummary.tabactivity.ActivityTabBrokerSummaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_filter"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_layout_border_5"
            android:drawableEnd="@drawable/ic_row_up"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:text="Filter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="title" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_broker_summary_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_filter">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_broker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Broker"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_broker_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    android:text="SQ"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_trade_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_broker"
                    app:txtFor="body" />

                <View
                    android:id="@+id/view_dropdown_stock"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintLeft_toLeftOf="@id/tv_broker_val"
                    app:layout_constraintRight_toRightOf="@id/tv_trade_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_broker_val"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_trade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_trade_val"
                    app:layout_constraintTop_toTopOf="@id/tv_broker" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_trade_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    android:text="All"
                    app:layout_constraintLeft_toRightOf="@id/tv_broker_val"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_trade"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    android:text="Form"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_broker_val" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_from_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    tools:text="--/--/----"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_to_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_from"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_to_val"
                    app:layout_constraintTop_toTopOf="@id/tv_from" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_to_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    tools:text="--/--/----"
                    app:layout_constraintLeft_toRightOf="@id/tv_from_val"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_to"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_apply_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="3dp"
                    android:text="Reset Filter"
                    android:layout_marginTop="16dp"
                    app:txtStyle="softBold"
                    android:drawableStart="@drawable/ic_clockwise"
                    android:drawableTint="@color/bgBCABlue"
                    app:txtColor="blue"
                    app:txtFor="body"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_to_val" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

        <RelativeLayout
            android:id="@+id/ly_code"
            android:layout_width="122dp"
            android:layout_height="64dp"
            android:background="@color/bgPrimary"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                app:txtStyle="bold"
                android:layout_centerInParent="true"
                android:text="Code"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/borderline"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ly_code"
            app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:background="@color/bgPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Board"
                        app:txtFor="body"
                        app:txtStyle="bold"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/borderline"
                        android:layout_alignParentEnd="true"/>


                    <!-- Buy -->
                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Buy"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/borderline"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Avg"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Val (T)"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Vol"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/borderline"
                        android:layout_alignParentEnd="true"/>


                    <!-- Sell -->
                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sell"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/borderline"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Avg"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Val (T)"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Vol"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/borderline"
                        android:layout_alignParentEnd="true"/>

                    <!-- Net -->
                    <LinearLayout
                        android:layout_width="236dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Net"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/borderline"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Val (T)"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Vol"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/borderline"
                        android:layout_alignParentEnd="true"/>

                    <!-- Net -->
                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Total"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/borderline"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Val (T)"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Vol"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Freq"
                                android:layout_marginStart="8dp"
                                app:txtFor="body"
                                app:txtStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </HorizontalScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ly_code"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_broker_summary_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_activity_code_tab_broker_summary"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll_rcv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rcv_broker_summary_code"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_broker_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        tools:visibility="visible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/rcv_broker_summary_code"
                        tools:listitem="@layout/item_activity_tab_broker_summary"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

