<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmPriceAlert"
            type="com.bcasekuritas.mybest.app.feature.pricealert.PriceAlertViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swpl_price_alert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgWhite">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <!-- start empty price alert -->

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_no_price_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:constraint_referenced_ids="iv_no_price_alert, tv_title_no_price_alert,tv_body_no_price_alert, btn_set_alert"
                    />

                <View
                    android:id="@+id/vw_container_no_price_alert"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_set_alert"/>

                <ImageView
                    android:id="@+id/iv_no_price_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="122dp"
                    android:src="@drawable/ic_no_price_alert"
                    app:layout_constraintTop_toTopOf="@id/vw_container_no_price_alert"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_no_price_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/title_price_alert_empty"
                    app:txtStyle="softBold"
                    app:txtFor="h4"
                    app:layout_constraintTop_toBottomOf="@id/iv_no_price_alert"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_body_no_price_alert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/desc_price_alert_empty"
                    android:textAlignment="center"
                    app:txtColor="secondaryGrey"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_no_price_alert"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:txtFor="title" />

                <com.bcasekuritas.mybest.widget.button.CustomButton
                    android:id="@+id/btn_set_alert"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/text_set_alert"
                    android:textAllCaps="false"
                    android:layout_marginBottom="16dp"
                    app:btnStyle="primary"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <!-- end empty price alert -->

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_data_exist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:constraint_referenced_ids="btn_add_price_alert"/>

                <com.bcasekuritas.mybest.widget.searchbar.CustomSearchBar
                    android:id="@+id/search_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/search_bar">

                    <!-- Chips can be declared here, or added dynamically. -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_active"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Active"
                        app:chipMinTouchTargetSize="22dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sent"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sent"
                        app:chipMinTouchTargetSize="22dp" />

                </com.google.android.material.chip.ChipGroup>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_price_alert"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/item_price_alert"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/chip_group"
                    app:layout_constraintBottom_toTopOf="@id/btn_add_price_alert"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_price_alert_sent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/item_price_alert_sent"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/chip_group"
                    app:layout_constraintBottom_toTopOf="@id/btn_add_price_alert"
                    />

                <com.bcasekuritas.mybest.widget.button.CustomButton
                    android:id="@+id/btn_add_price_alert"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/text_add_price_alert"
                    android:textAllCaps="false"
                    app:btnStyle="primary"
                    android:visibility="visible"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>