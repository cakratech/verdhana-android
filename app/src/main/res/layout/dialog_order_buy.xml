<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_confirm_order_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                >

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="big"
                    app:txtStyle="bold"
                    android:text="Confirm Sell Order"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/btn_close"
                    app:layout_constraintBottom_toBottomOf="@id/btn_close"/>

                <com.bcasekuritas.mybest.widget.button.CustomButton
                    android:id="@+id/btn_close"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:btnStyle="transBlack"
                    android:gravity="end"
                    style="@style/Button.Icon"
                    app:icon="@drawable/ic_close"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/vw_market_closed"
                    android:layout_width="0dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_f0f5f8_8"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>


                <ImageView
                    android:id="@+id/iv_market_closed"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/researchreport"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="@id/vw_market_closed"
                    app:layout_constraintTop_toTopOf="@id/vw_market_closed"
                    app:layout_constraintBottom_toBottomOf="@id/vw_market_closed"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_market_closed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:txtFor="title"
                    app:txtStyle="bold"
                    android:layout_marginStart="16dp"
                    android:text="Market is currently closed"
                    android:paddingBottom="5dp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/iv_market_closed"
                    app:layout_constraintTop_toTopOf="@id/vw_market_closed"
                    app:layout_constraintBottom_toTopOf="@id/tv_desc_market_closed"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_desc_market_closed"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="You can stil make an order but it will be places after the market resumes"
                    app:layout_constraintStart_toStartOf="@id/tv_title_market_closed"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_market_closed"
                    app:layout_constraintBottom_toBottomOf="@id/vw_market_closed"/>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_market_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:constraint_referenced_ids="vw_market_closed, iv_market_closed, tv_title_market_closed, tv_desc_market_closed"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_dialog_order_saham"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_square_blue_info"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/vw_market_closed">

                    <ImageView
                        android:id="@+id/image_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="2"
                        tools:text="BA"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:txtColor="white"
                        app:txtStyle="bold"
                        app:txtFor="caption"
                        app:layout_constraintLeft_toLeftOf="@id/image_logo"
                        app:layout_constraintRight_toRightOf="@id/image_logo"
                        app:layout_constraintBottom_toBottomOf="@id/image_logo"
                        app:layout_constraintTop_toTopOf="@id/image_logo"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_logo"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_stock_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BBCA"
                                app:txtColor="white"
                                app:txtFor="title"
                                app:txtStyle="softBold" />

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_notation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_layout_border_5_no_padding"
                                android:backgroundTint="@color/textYellow"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="1dp"
                                tools:text="EX"
                                android:visibility="gone"
                                tools:visibility="visible"
                                app:layout_constraintStart_toEndOf="@id/tv_stock_code"
                                app:layout_constraintTop_toTopOf="@id/tv_stock_code"
                                app:txtFor="caption"
                                app:txtStyle="softBold" />

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_info_special_notes_acceleration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:background="@drawable/bg_layout_border_5_no_padding"
                                android:backgroundTint="@color/white"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="1dp"
                                tools:text="Acceleration"
                                android:visibility="gone"
                                app:txtColor="blue"
                                tools:visibility="visible"
                                app:layout_constraintStart_toEndOf="@id/tv_info_special_notes"
                                app:layout_constraintTop_toTopOf="parent"
                                app:txtFor="caption"
                                app:txtStyle="softBold" />

                        </LinearLayout>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Bank Central Asia Tbk."
                            app:txtFor="body"
                            app:txtColor="white"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="Order Type"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/cl_dialog_order_saham"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_type_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="Limit Order"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_type"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_dialog_market_order_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Market Order Type"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_sell_type"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_dialog_market_order_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="end"
                    tools:text="Fill and Kill (FAK)"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_sell_type"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_expiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="Order Expiry"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_market_order_type"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_expiry_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    tools:text="Today"
                    app:txtStyle="softBold"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_expiry"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_market_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:constraint_referenced_ids="tv_dialog_market_order_type, tv_title_dialog_market_order_type"
                    />

                <View
                    android:id="@+id/vw_line_4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/borderline"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_sell_expiry"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="Sell Price"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/vw_line_4"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_price_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    tools:text="9,100"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_price"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    android:text="Lot"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_sell_price"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_lot_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:txtFor="body"
                    tools:text="1"
                    app:layout_constraintTop_toTopOf="@id/tv_lot"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_info_market_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="The order will be executed immediately at the best available price."
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_lot_val"
                    app:txtFor="caption"
                    app:txtColor="noChanges"
                    />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_order_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    app:constraint_referenced_ids="tv_sell_price, tv_sell_price_val, vw_line_2, tv_proceed_amount, tv_proceed_amount_val,
            tv_comm_fee, tv_comm_fee_val"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_dialog_order_slice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_info_market_order"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end">

                    <View
                        android:id="@+id/vw_line_slice"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/brandSecondaryLight"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_slice_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:txtFor="body"
                        android:text="Split / Repeat Order"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vw_line_slice"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_slice_order_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="Active"
                        app:layout_constraintTop_toTopOf="@id/tv_slice_order"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_slice_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="Type"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_slice_order"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_slice_type_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="At Once"
                        app:layout_constraintTop_toTopOf="@id/tv_slice_type"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_dialog_order_slice_order_end_timee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="End Time"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_slice_type"
                        app:txtFor="body"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_dialog_order_slice_order_end_timee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:text="12:59:59"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_slice_type"
                        app:txtFor="body"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_no_split"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="No. of Splits"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_order_slice_order_end_timee"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_no_split_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/tv_no_split"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_block_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="No. of Repeats"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_no_split"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_block_size_val"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="0"
                        app:layout_constraintTop_toTopOf="@id/tv_block_size"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_dialog_order_take_profit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/cl_dialog_order_slice"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.35"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_dialog_order_take_profite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Take Profit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_dialog_order_take_profit_compare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Compare"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_order_take_profite"
                        app:txtFor="body"
                        />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_dialog_order_take_profit_compare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:text="Last Price"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_order_take_profite"
                        app:txtFor="body"
                        />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_dialog_order_take_profit_trigger_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Trigger Price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_take_profit_compare"
                        app:txtFor="body"
                        />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/iv_dialog_order_take_profit_trigger_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:text="&#x2265; "
                        app:txtFor="body"

                        app:layout_constraintEnd_toStartOf="@+id/tv_dialog_order_take_profit_trigger_price"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_take_profit_compare"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_dialog_order_take_profit_trigger_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:text="Rp0"
                        app:txtFor="body"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_dialog_order_take_profit_trigger_price"
                        app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_take_profit_compare"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_dialog_order_take_profit_sell_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Sell Price"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_take_profit_trigger_price"
                        app:txtFor="body"
                        />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_dialog_order_take_profit_sell_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:text="Rp0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guideline2"
                        app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_take_profit_trigger_price"
                        app:txtFor="body"
                        />

