<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmSetupVolume"
            type="com.bcasekuritas.mybest.app.feature.fastorder.setupvolume.SetupVolumeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/txtWhiteBlack">

            <include
                android:id="@+id/ly_toolbar"
                layout="@layout/layout_toolbar_fast_order" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

            <View
                android:id="@+id/bg_stock"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_ffffff_8_stroke_dae8f6"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/ly_toolbar"/>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="@id/bg_stock"
                app:layout_constraintTop_toTopOf="@id/bg_stock"
                app:layout_constraintBottom_toBottomOf="@id/bg_stock"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_stock_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="title"
                app:txtStyle="bold"
                android:text="BBCA"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@id/bg_stock"
                app:layout_constraintTop_toTopOf="@id/iv_logo"
                app:layout_constraintBottom_toTopOf="@id/tv_last_price"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_last_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="caption"
                android:text="Last Rp 9.245"
                app:layout_constraintStart_toStartOf="@id/tv_stock_code"
                app:layout_constraintTop_toBottomOf="@id/tv_stock_code"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo"/>

            <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjusterBorder
                android:id="@+id/adjuster_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintBottom_toTopOf="@id/vw_separator_volume_confirm"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                android:text="Volume"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="@id/adjuster_volume"
                app:layout_constraintBottom_toBottomOf="@id/adjuster_volume"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                android:text="(Lot)"
                android:layout_marginStart="5dp"
                android:textColor="@color/greyish"
                app:layout_constraintStart_toEndOf="@id/tv_volume"
                app:layout_constraintTop_toTopOf="@id/tv_volume"/>

            <View
                android:id="@+id/vw_separator_volume_confirm"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/borderline"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintBottom_toTopOf="@id/btn_confirm"/>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:btnStyle="primary"
                android:text="Confirm"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintBottom_toTopOf="@id/input_layout"/>

            <!--        TODO RK: make background border dynamic (create a state)-->



            <include
                android:id="@+id/input_layout"
                layout="@layout/custom_layout_input_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>