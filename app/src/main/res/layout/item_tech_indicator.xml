<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_stock_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="BBCA"
        app:txtFor="title"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_value"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="2000"
        app:txtFor="title"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toEndOf="@id/tv_stock_name"
        app:layout_constraintEnd_toStartOf="@id/tv_action"
        app:layout_constraintTop_toTopOf="@id/tv_stock_name"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Buy"
        app:txtColor="green"
        android:textAlignment="textEnd"
        app:txtFor="title"
        app:layout_constraintStart_toEndOf="@id/tv_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_stock_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>