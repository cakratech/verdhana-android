<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmActMain"
            type="com.bcasekuritas.mybest.app.feature.activity.main.MainViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgWhite"
            android:clipChildren="false"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/f_main_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
                android:name="androidx.navigation.fragment.NavHostFragment" />

            <View
                android:id="@+id/drop_shadow"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:elevation="5dp"
                android:layout_marginTop="-7dp"
                app:layout_constraintTop_toTopOf="@id/bottom_navigation"
                android:background="@drawable/bg_drop_shadow"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_bottom_sheet"
                app:elevation="6dp"
                app:useCompatPadding="true"
                app:itemRippleColor="@null"
                app:itemIconSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/BottomNavigation.ActiveItemTextAppearance"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_nav_menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>