<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmRankGlobal"
            type="com.bcasekuritas.mybest.app.feature.global.rank.RankGlobalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_layout_border_5"
            android:drawableStart="@drawable/ic_filter"
            android:drawableEnd="@drawable/ic_bot_row"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:text="Filter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="title" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_rank_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:el_duration="500"
            app:el_expanded="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_filter">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_activity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:paddingStart="2dp"
                    app:layout_constraintWidth_percent="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_sort"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:text="Sort"
                    app:layout_constraintLeft_toLeftOf="@id/tv_sort_val"
                    app:layout_constraintTop_toTopOf="parent"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_trade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="3dp"
                    android:text="Trade"
                    app:layout_constraintLeft_toLeftOf="@id/tv_trade_val"
                    app:layout_constraintTop_toTopOf="parent"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_activity_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    android:text="Buy"
                    app:txtFor="title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_sort_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_activity" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sort_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    app:txtFor="title"
                    android:text="Value"
                    app:layout_constraintLeft_toRightOf="@id/tv_activity_val"
                    app:layout_constraintRight_toLeftOf="@id/tv_trade_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_sort" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_trade_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    app:txtFor="title"
                    android:text="RG"
                    app:layout_constraintLeft_toRightOf="@id/tv_sort_val"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_trade" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Form"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_activity_val"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_date_from_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    app:txtFor="title"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_date_to_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_from"
                    tools:text="--/--/----" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    app:layout_constraintLeft_toLeftOf="@id/tv_date_to_val"
                    app:layout_constraintTop_toTopOf="@id/tv_from"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_date_to_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    android:drawablePadding="12dp"
                    app:txtFor="title"
                    android:gravity="center_vertical"
                    app:layout_constraintLeft_toRightOf="@id/tv_date_from_val"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_to"
                    tools:text="--/--/----" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_reset_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawableStart="@drawable/ic_clockwise"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/bgBCABlue"
                    android:text="Reset Filter"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_date_to_val"
                    app:txtColor="blue"
                    app:txtFor="body"
                    app:txtStyle="softBold" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <RelativeLayout
            android:id="@+id/ly_rank"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/bgPrimary"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_rank_filter">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No"
                app:txtFor="body"
                app:txtStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_code"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@color/bgPrimary"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@id/ly_rank"
            app:layout_constraintTop_toBottomOf="@id/expand_rank_filter">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Code"
                app:txtFor="body"
                app:txtStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/borderline" />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintLeft_toRightOf="@id/ly_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_rank_filter">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bgPrimary"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Board"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical|center"
                    android:text="Last Price"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical|center"
                    android:text="Change"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="%"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Value (T)"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Volume"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Freq"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Value Buy (T)"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Value Sell (T)"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Net Value (T)"
                    app:txtFor="body"
                    app:txtStyle="bold" />
            </LinearLayout>

        </HorizontalScrollView>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_code">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_global_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_ranking_code_tab_broker_summary" />

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll_rcv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintLeft_toRightOf="@id/rcv_global_code"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_global_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_global_rank" />

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>