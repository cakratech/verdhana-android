<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_info_close"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close_black"
            android:gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_info_close">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realized Gain/Loss"
                app:txtFor="title"
                app:txtStyle="bold"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Keuntungan atau kerugian yang sudah direalisasikan dari saham dalam portofolio, dihitung berdasarkan selisih antara harga beli rata-rata pada saat penjualan dan harga jual dengan jumlah lot yang dimiliki, tanpa memperhitungkan biaya transaksi."
                app:txtFor="body"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Perhitungan ini hanya berlaku untuk saham yang dibeli melalui aplikasi. Saham yang di transfer dari sekuritas lain tidak termasuk dalam perhitungan ini."
                app:txtFor="body"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_foot_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realized gains or losses calculated based on the average price when selling the stocks and the sell price, excluding fees."
                android:textStyle="italic"
                android:layout_marginTop="16dp"
                app:txtFor="caption"/>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OK"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:btnStyle="default"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
