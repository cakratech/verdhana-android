<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmFastAmend"
            type="com.bcasekuritas.mybest.app.feature.fastorder.amend.FastAmendViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:txtFor="big"
            app:txtStyle="softBold"
            tools:text="You already have an active order"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/btn_close"
            app:layout_constraintTop_toTopOf="@id/btn_close"
            app:layout_constraintBottom_toBottomOf="@id/btn_close"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Button.Icon"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_more_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to add more order?"
            app:txtFor="title"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <View
            android:id="@+id/bg_stock"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_ffffff_top_8_stroke_dae8f6"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_more_order"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@id/bg_stock"
            app:layout_constraintTop_toTopOf="@id/bg_stock"
            app:layout_constraintBottom_toBottomOf="@id/bg_stock"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="title"
            app:txtStyle="softBold"
            android:text="BBCA"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_logo"
            app:layout_constraintTop_toTopOf="@id/iv_logo"
            app:layout_constraintBottom_toTopOf="@id/tv_company_name"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="caption"
            tools:text="Bank Central Asia Tbk."
            app:layout_constraintStart_toStartOf="@id/tv_stock_code"
            app:layout_constraintTop_toBottomOf="@id/tv_stock_code"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_buy_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            tools:text="Buy"
            app:txtColor="white"
            app:txtFor="title"
            app:txtStyle="softBold"
            android:background="@drawable/bg_015fcd_12"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/bg_stock"
            app:layout_constraintTop_toTopOf="@id/bg_stock"
            app:layout_constraintBottom_toBottomOf="@id/bg_stock"/>

        <View
            android:id="@+id/vw_total_order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_ffffff_bottom_8_stroke_dae8f6"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/bg_stock"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_order"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_total_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            tools:listitem="@layout/item_order_fast_order"
            tools:itemCount="2"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="@id/vw_total_order"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_total_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_marginStart="16dp"
            android:paddingBottom="8dp"
            app:txtFor="body"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/rcv_total_order"
            app:layout_constraintBottom_toBottomOf="@id/vw_total_order"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="912.000"
            app:txtFor="body"
            app:txtStyle="softBold"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="@id/tv_total_order"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_prevent_same_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Don't prevent me for buying the same stock"
            app:layout_constraintTop_toBottomOf="@id/vw_total_order"
            app:layout_constraintStart_toStartOf="parent" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:btnStyle="outline"
            android:text="Cancel"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/btn_add_order"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/cb_prevent_same_stock"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_add_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Confirm"
            app:btnStyle="primary"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintTop_toTopOf="@id/btn_cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>