                    android:id="@+id/et_search_help"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_search_0154fa"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="Search keyword"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/ly_top_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/et_search_help">

