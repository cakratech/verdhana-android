                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Top 5 Questions"
                        android:layout_marginBottom="5dp"
                        app:txtFor="title"
                        app:txtStyle="bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_help_questions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sum_found_topic"/>


                </LinearLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_categories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Categories"
                    android:layout_marginBottom="5dp"
                    app:txtFor="title"
                    app:txtStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/ly_top_question"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"/>

