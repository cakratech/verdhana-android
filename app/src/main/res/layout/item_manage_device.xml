<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/bgWhite">

        <ImageView
            android:id="@+id/iv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_device_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintLeft_toRightOf="@id/iv_device_type"
            app:layout_constraintTop_toTopOf="@id/iv_device_type"
            app:txtStyle="softBold"
            tools:text="iPhone 14 Pro" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_login_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="@id/tv_device_name"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            app:txtColor="secondaryGrey"
            app:txtFor="caption"
            tools:text="Login 14/08/2025 16:25:27 " />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_login_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintRight_toLeftOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="@id/tv_device_name"
            app:layout_constraintTop_toBottomOf="@id/tv_login_date"
            app:txtColor="secondaryGrey"
            app:txtFor="caption"
            tools:text="IP: 123.24.5.22" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_device_platform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textAlignment="textEnd"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintRight_toLeftOf="@id/btn_remove"
            app:layout_constraintTop_toTopOf="parent"
            app:txtColor="secondaryGrey"
            app:txtFor="caption"
            tools:text="iPhone 14 Pro" />

        <ImageView
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_no_padding"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/textSecondaryGrey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_ip" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.62" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

