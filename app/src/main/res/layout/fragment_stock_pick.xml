<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmStockPick"
            type="com.bcasekuritas.mybest.app.feature.stockpick.StockPickViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/vw_info_warning"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_light_yellow_border_yellow"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_info_stock_pick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:txtFor="body"
            app:txtColor="yellow"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/stock_pick_warning"
            app:layout_constraintStart_toStartOf="@id/vw_info_warning"
            app:layout_constraintEnd_toStartOf="@+id/iv_close_info_warning"
            app:layout_constraintTop_toTopOf="@id/vw_info_warning"
            app:layout_constraintBottom_toBottomOf="@+id/vw_info_warning"/>

        <ImageView
            android:id="@+id/iv_close_info_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/vw_info_warning"
            app:layout_constraintTop_toTopOf="@+id/vw_info_warning"
            app:tint="@color/yellow" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_info_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="vw_info_warning, tv_info_stock_pick, iv_close_info_warning"/>

        <!-- box Realized -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_view_report"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="@drawable/rounded_f0f5f8_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_info_warning">

            <ImageView
                android:id="@+id/iv_offering_portfolio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_market_closed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/box_offering"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_offering_portfolio"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check research report related to stock picks below"
                    app:txtFor="caption"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="View Report"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:txtColor="blue"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- row table -->
        <LinearLayout
            android:id="@+id/ly_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:weightSum="3"
            android:background="@color/bgLightGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_view_report"
            android:paddingVertical="12dp">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stock Code"
                app:txtStyle="bold"
                app:txtFor="caption"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resistance"
                android:textAlignment="center"
                app:txtStyle="bold"
                app:txtFor="caption"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="Support"
                app:txtStyle="bold"
                app:txtFor="caption" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_stock_pick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_stock_pick"
            app:layout_constraintTop_toBottomOf="@id/ly_row"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
