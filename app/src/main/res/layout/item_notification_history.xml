<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_notif"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_nt_arrow_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_notif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@id/iv_notif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_notif"
        app:txtFor="body"
        tools:text="You have successfully bought BBCA." />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_time_notif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toRightOf="@id/iv_notif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notif"
        app:txtColor="grey"
        app:txtFor="caption"
        app:txtStyle="softBold"
        tools:text="2 hours ago" />

</androidx.constraintlayout.widget.ConstraintLayout>