<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmDisclaimer"
            type="com.bcasekuritas.mybest.app.feature.disclaimer.DisclaimerViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgWhite">

            <RelativeLayout
                android:id="@+id/ly_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ly_toolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:scrollbars="none">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="h4"
                        app:txtStyle="bold"
                        android:text="DISCLAIMER"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="1."
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_title"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_one_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="24dp"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/disclaimer_one"
                        app:layout_constraintTop_toTopOf="@id/tv_number_one"
                        app:layout_constraintLeft_toRightOf="@id/tv_number_one"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="2."
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_number_one_desc"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_two_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="24dp"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/disclaimer_two"
                        app:layout_constraintTop_toTopOf="@id/tv_number_two"
                        app:layout_constraintLeft_toRightOf="@id/tv_number_two"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="3."
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_number_two_desc"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_three_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="24dp"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/disclaimer_three"
                        app:layout_constraintTop_toTopOf="@id/tv_number_three"
                        app:layout_constraintLeft_toRightOf="@id/tv_number_three"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="4."
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_number_three_desc"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_four_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="24dp"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/disclaimer_four"
                        app:layout_constraintTop_toTopOf="@id/tv_number_four"
                        app:layout_constraintLeft_toRightOf="@id/tv_number_four"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:text="5."
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_number_four_desc"
                        android:layout_marginLeft="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_number_five_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:txtFor="body"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="24dp"
                        android:lineSpacingExtra="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/disclaimer_five"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="50dp"
                        app:layout_constraintTop_toTopOf="@id/tv_number_five"
                        app:layout_constraintLeft_toRightOf="@id/tv_number_five"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>