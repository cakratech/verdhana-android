<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmCalendar"
            type="com.bcasekuritas.mybest.app.feature.calendar.CalendarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar"
            layout="@layout/layout_toolbar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <!--  group for border-->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_calendar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:constraint_referenced_ids="btn_calendar_back, btn_calendar_forward, rcv_calendar"
            app:layout_constraintStart_toStartOf="@+id/btn_calendar_back"
            app:layout_constraintEnd_toEndOf="@id/btn_calendar_forward"
            app:layout_constraintBottom_toBottomOf="@id/ly_right_issue"
            app:layout_constraintTop_toBottomOf="@id/btn_calendar_forward"/>

        <View
            android:id="@+id/vw_prev_next"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_eef8fafb_16"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_calendar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_chevron_right"
            app:iconGravity="end"
            android:scaleX="-1"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/vw_prev_next"
            app:layout_constraintBottom_toBottomOf="@id/vw_prev_next"/>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_calendar_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:btnStyle="transBlack"
            app:iconGravity="end"
            app:icon="@drawable/ic_chevron_right"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toTopOf="@id/btn_calendar_back"/>
        
        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_cal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="title"
            app:txtStyle="bold"
            android:text="July 2023"
            app:layout_constraintStart_toEndOf="@+id/btn_calendar_back"
            app:layout_constraintEnd_toStartOf="@+id/btn_calendar_forward"
            app:layout_constraintTop_toTopOf="@+id/btn_calendar_forward"
            app:layout_constraintBottom_toBottomOf="@id/btn_calendar_forward"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_sun"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:text="SUN"
            app:txtStyle="softBold"
            app:layout_constraintTop_toBottomOf="@+id/btn_calendar_back"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_mon"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_mon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="MON"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@id/tv_sun"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_tue"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_tue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="TUE"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@+id/tv_mon"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_wed"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_wed"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="WED"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@id/tv_tue"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_thu"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_thu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="THU"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@id/tv_wed"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_fri"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_fri"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="FRI"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@id/tv_thu"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/tv_sat"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_sat"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:textAlignment="center"
            android:text="SAT"
            app:txtStyle="softBold"
            app:layout_constraintTop_toTopOf="@+id/tv_sun"
            app:layout_constraintStart_toEndOf="@id/tv_fri"
            app:layout_constraintBottom_toTopOf="@id/rcv_calendar"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_calendar"
            tools:itemCount="31"
            app:spanCount="7"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_wed"/>

        <LinearLayout
            android:id="@+id/ly_dividen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/rcv_calendar">

            <ImageView
                android:id="@+id/dot_dividen"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calDividen" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dividen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Dividend"
                app:txtFor="caption"
                app:txtStyle="softBold"
                app:txtColor="dividend"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_rups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_dividen"
            app:layout_constraintTop_toTopOf="@+id/ly_dividen">

            <ImageView
                android:id="@+id/dot_rups"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calRUPS"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_rups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtStyle="softBold"
                app:txtFor="caption"
                android:layout_marginStart="4dp"
                android:text="RUPS"
                app:txtColor="rups"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_ipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_rups"
            app:layout_constraintTop_toTopOf="@+id/ly_dividen">

            <ImageView
                android:id="@+id/dot_ipo"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calEIPO"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_ipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtFor="caption"
                app:txtStyle="softBold"
                android:text="E-IPO"
                app:txtColor="eipo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_pub_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_ipo"
            app:layout_constraintTop_toTopOf="@+id/ly_ipo">

            <ImageView
                android:id="@+id/dot_pub_exp"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calPubExp"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_pub_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtStyle="softBold"
                app:txtFor="caption"
                android:text="Public Expose"
                app:txtColor="pubExp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_pub_exp"
            app:layout_constraintTop_toTopOf="@id/ly_dividen">

            <ImageView
                android:id="@+id/dot_bonus"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calBonus"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtFor="caption"
                app:txtStyle="softBold"
                android:text="Bonus"
                app:txtColor="bonus"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_stock_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/ly_dividen">

            <ImageView
                android:id="@+id/dot_stock_split"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calStockSplit"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_stock_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtFor="caption"
                app:txtStyle="softBold"
                android:text="Stock Split"
                app:txtColor="stockSplit"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_reverse_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_stock_split"
            app:layout_constraintTop_toTopOf="@+id/ly_stock_split">

            <ImageView
                android:id="@+id/dot_reverse_split"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calReverseSplit"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_reverse_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtStyle="softBold"
                app:txtFor="caption"
                android:text="Reverse Split"
                app:txtColor="reverseSplit"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_right_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_reverse_split"
            app:layout_constraintTop_toTopOf="@+id/ly_stock_split">

            <ImageView
                android:id="@+id/dot_right_issue"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calRightIssue"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_right_issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtStyle="softBold"
                app:txtFor="caption"
                android:text="Right Issue"
                app:txtColor="rightIssue"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_warrant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ly_right_issue"
            app:layout_constraintTop_toTopOf="@+id/ly_right_issue">

            <ImageView
                android:id="@+id/dot_warrant"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/bg_circle_gray"
                app:tint="@color/calWarrant"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_warrant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:txtStyle="softBold"
                android:text="Warrant"
                app:txtFor="caption"
                app:txtColor="warrant"/>

        </LinearLayout>

        <View
            android:id="@+id/divider_calendar_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/bgSecondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/group_calendar"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        
        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="title"
            app:txtStyle="bold"
            android:text="20 Jul 2023"
            app:layout_constraintStart_toEndOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/group_calendar"
            android:layout_marginTop="15dp"/>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_event_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            tools:listitem="@layout/item_event_list_calendar"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_date_list"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_calendar_empty"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_date_list"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintBottom_toTopOf="@id/tv_title_empty"/>
        
        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_title_empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:txtFor="h4"
            app:txtStyle="softBold"
            android:textAlignment="center"
            android:text="There is no activity on this date"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty"
            app:layout_constraintEnd_toEndOf="@id/guideline_end" 
            app:layout_constraintBottom_toTopOf="@id/tv_desc_empty"/>
        
        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_desc_empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:txtFor="body"
            app:txtColor="grey"
            android:textAlignment="center"
            android:text="Check out other dates with dotted colors to view activities"
            app:layout_constraintStart_toEndOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_empty"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
<!--        for visibility when list empty-->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_empty_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_ffffff_8_stroke_dae8f6"
            app:constraint_referenced_ids="iv_empty, tv_title_empty, tv_desc_empty"/>
        
        

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>