<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmConditionAdvance"
            type="com.bcasekuritas.mybest.app.feature.order.conditionadvanced.ConditionAdvancedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/ly_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- box order buy personal info -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_order_buy_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/rounded_0d54e1_16"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_order_buy_personal_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_ffffff_44"
                        android:backgroundTint="#19FFFFFF"
                        android:padding="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_profile_image"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_profile_background"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_image_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
                            app:layout_constraintLeft_toLeftOf="@id/iv_profile_image"
                            app:layout_constraintRight_toRightOf="@id/iv_profile_image"
                            app:layout_constraintTop_toTopOf="@id/iv_profile_image"
                            app:txtFor="tiny"
                            app:txtStyle="bold"
                            tools:text="RB" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_order_buy_personal_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:text="AccNo - Clieant Name"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_profile_image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:txtColor="white"
                            app:txtFor="caption"
                            app:txtStyle="softBold" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- box order buy saham info -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_order_buy_saham_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cl_order_buy_personal_info">

                        <ImageView
                            android:id="@+id/iv_order_buy_saham_info"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="2"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@id/iv_order_buy_saham_info"
                            app:layout_constraintLeft_toLeftOf="@id/iv_order_buy_saham_info"
                            app:layout_constraintRight_toRightOf="@id/iv_order_buy_saham_info"
                            app:layout_constraintTop_toTopOf="@id/iv_order_buy_saham_info"
                            app:txtColor="white"
                            app:txtFor="caption"
                            app:txtStyle="bold"
                            tools:text="BA"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/ll_order_buy_saham_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_order_buy_saham_info"
                            app:layout_constraintRight_toLeftOf="@id/ll_order_buy_price_info"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_order_buy_saham_info_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10dp"
                                    android:drawableTint="@color/white"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:txtColor="white"
                                    app:txtFor="title"
                                    app:txtStyle="bold"
                                    tools:text="ASDA" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_info_special_notes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:background="@drawable/bg_layout_border_5_no_padding"
                                    android:backgroundTint="@color/textYellow"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="1dp"
                                    android:visibility="gone"
                                    app:txtFor="caption"
                                    app:txtStyle="softBold"
                                    tools:text="EX"
                                    tools:visibility="visible" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_info_special_notes_acceleration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:background="@drawable/bg_layout_border_5_no_padding"
                                    android:backgroundTint="@color/white"
                                    android:paddingHorizontal="6dp"
                                    android:paddingVertical="1dp"
                                    android:visibility="gone"
                                    app:txtColor="blue"
                                    app:txtFor="caption"
                                    app:txtStyle="softBold"
                                    tools:text="Acceleration"
                                    tools:visibility="visible" />

                            </LinearLayout>


                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_order_buy_saham_info_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha="0.5"
                                android:text=""
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:txtColor="white"
                                app:txtFor="caption"
                                tools:text="PT. Asdasd asdasdasdasd" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_order_buy_price_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:gravity="end"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_order_buy_saham_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/darkGrey"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:txtColor="white"
                                app:txtFor="desc"
                                app:txtStyle="bold" />

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_order_buy_saham_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/textGreen2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:txtColor="lightGreen"
                                app:txtFor="caption"
                                app:txtStyle="softBold"
                                tools:text="0(+0)" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view_stock_dropdown_line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="@id/cl_order_buy_saham_info"
                        app:layout_constraintStart_toStartOf="@id/cl_order_buy_saham_info"
                        app:layout_constraintTop_toBottomOf="@id/cl_order_buy_saham_info" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_owned_lot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Owned Lot"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_order_buy_info"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_owned_lot_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="0 Lot"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_owned_lot"
                    app:txtFor="caption"
                    app:txtStyle="bold" />

                <View
                    android:id="@+id/divider_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/borderline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_owned_lot" />

                <CheckBox
                    android:id="@+id/cb_take_profit_sltp"
                    style="@style/Widget.App.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Take Profit"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_1" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_compare_tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Compare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cb_take_profit_sltp"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_compare_tp_val"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_square_grey"
                    android:gravity="center|left"
                    android:paddingStart="5dp"
                    android:text="Last Price"
                    app:layout_constraintBottom_toBottomOf="@id/tv_compare_tp"
                    app:layout_constraintEnd_toStartOf="@id/iv_symbol_tp"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_tp"
                    app:layout_constraintVertical_bias="1.0"
                    app:txtColor="blue"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/iv_symbol_tp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_squere_solid_grey_rad_10"
                    android:gravity="center"
                    android:text="≥"
                    app:layout_constraintEnd_toStartOf="@id/edt_compare_tp"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_tp_val"
                    app:txtFor="title"
                    app:txtStyle="softBold" />

                <com.bcasekuritas.mybest.widget.edittext.EditTextDrawable
                    android:id="@+id/edt_compare_tp"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_square_grey"
                    android:inputType="number"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_tp_val" />

                <ImageView
                    android:id="@+id/iv_compare_sltp_val"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@id/tv_compare_tp_val"
                    app:layout_constraintEnd_toEndOf="@id/tv_compare_tp_val"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_tp_val"
                    app:tint="@color/brandPrimaryBCABlue" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_price_sltp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compare_tp"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjuster
                    android:id="@+id/adjuster_sell_price_tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sell_price_sltp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_price_sltp" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_error_tp_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/adjuster_sell_price_tp"
                    app:txtColor="red"
                    app:txtFor="body"
                    tools:text="Take Profit price should be higher than buy price price should be higher than buy price"
                    tools:visibility="visible" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_order_sltp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Sell Order Lot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_error_tp_price"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjuster
                    android:id="@+id/adjuster_sell_qty_tp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    app:isFraction="false"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sell_order_sltp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_order_sltp" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_error_tp_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/adjuster_sell_qty_tp"
                    app:txtColor="red"
                    app:txtFor="body"
                    tools:text="Take Profit price should be higher than buy price ld be higher than buy price"
                    tools:visibility="visible" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_info_take_profit_tp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:text="If stock price hit Rp 0, Sell order will be sent to take an approx. Rp 0 (+0%) profit"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_error_tp_qty"
                    app:txtFor="caption" />

                <View
                    android:id="@+id/vw_divider_sltp_3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/borderline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_error_tp_qty" />

                <CheckBox
                    android:id="@+id/cb_stop_loss_sltp"
                    style="@style/Widget.App.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Stop Loss"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vw_divider_sltp_3" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_compare_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Compare"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cb_stop_loss_sltp"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_compare_sl_val"
                    android:layout_width="100dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_square_grey"
                    android:gravity="center|left"
                    android:paddingStart="5dp"
                    android:text="Last Price"
                    app:layout_constraintBottom_toBottomOf="@id/tv_compare_sl"
                    app:layout_constraintEnd_toStartOf="@id/iv_symbol_sl"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_sl"
                    app:txtColor="blue"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/iv_symbol_sl"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_squere_solid_grey_rad_10"
                    android:gravity="center"
                    android:scaleX="-1"
                    android:text="≥"
                    app:layout_constraintEnd_toStartOf="@id/edt_compare_sl"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_sl_val"
                    app:txtFor="title"
                    app:txtStyle="softBold" />

                <EditText
                    android:id="@+id/edt_compare_sl"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_square_grey"
                    android:inputType="number"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_sl_val" />


                <ImageView
                    android:id="@+id/iv_board_sltp_val"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_chevron_down"
                    app:layout_constraintBottom_toBottomOf="@id/tv_compare_sl_val"
                    app:layout_constraintEnd_toEndOf="@id/tv_compare_sl_val"
                    app:layout_constraintTop_toTopOf="@id/tv_compare_sl_val"
                    app:tint="@color/brandPrimaryBCABlue" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_price_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compare_sl"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjuster
                    android:id="@+id/adjuster_sell_price_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sell_price_sl"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_sell_price_sl" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_error_sl_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/adjuster_sell_price_sl"
                    app:txtColor="red"
                    app:txtFor="body"
                    tools:text="Stop Loss price should be lower than buy price d be lower than buy price"
                    tools:visibility="visible" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_order_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Sell Order Lot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_error_sl_price"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjuster
                    android:id="@+id/adjuster_sell_qty_sl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
