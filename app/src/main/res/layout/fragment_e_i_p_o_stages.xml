<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmEIPOStages"
            type="com.bcasekuritas.mybest.app.feature.e_ipo.eipodetail.stages.EIPOStagesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="100dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_allocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="184dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="268dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_horizontal_ipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="352dp" />

                <ImageView
                    android:id="@+id/iv_dot_book_building"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot_selector"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/guideline_horizontal_book"
                    app:tint="#B3B7C3" />

                <View
                    android:id="@+id/vw_book_to_offer"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#B3B7C3"
                    app:layout_constraintBottom_toTopOf="@+id/iv_dot_offering"
                    app:layout_constraintEnd_toEndOf="@id/iv_dot_book_building"
                    app:layout_constraintStart_toStartOf="@id/iv_dot_book_building"
                    app:layout_constraintTop_toBottomOf="@id/iv_dot_book_building" />

                <ImageView
                    android:id="@+id/iv_dot_offering"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot_selector"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/guideline_horizontal_offer"
                    app:tint="#B3B7C3" />

                <View
                    android:id="@+id/vw_offer_to_allocation"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#B3B7C3"
                    app:layout_constraintBottom_toTopOf="@id/iv_dot_allocation"
                    app:layout_constraintEnd_toEndOf="@id/iv_dot_offering"
                    app:layout_constraintStart_toStartOf="@id/iv_dot_offering"
                    app:layout_constraintTop_toBottomOf="@id/iv_dot_offering" />

                <ImageView
                    android:id="@+id/iv_dot_allocation"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot_selector"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/guideline_horizontal_allocation"
                    app:tint="#B3B7C3" />

                <View
                    android:id="@+id/vw_alloc_to_distrib"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#B3B7C3"
                    app:layout_constraintBottom_toTopOf="@id/iv_dot_distribution"
                    app:layout_constraintEnd_toEndOf="@id/iv_dot_allocation"
                    app:layout_constraintStart_toStartOf="@id/iv_dot_allocation"
                    app:layout_constraintTop_toBottomOf="@id/iv_dot_allocation" />

                <ImageView
                    android:id="@+id/iv_dot_distribution"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot_selector"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/guideline_horizontal_distribution"
                    app:tint="#B3B7C3" />

                <View
                    android:id="@+id/vw_distrib_to_ipo"
                    android:layout_width="4dp"
                    android:layout_height="0dp"
                    android:background="#B3B7C3"
                    app:layout_constraintBottom_toTopOf="@id/iv_dot_ipo"
                    app:layout_constraintEnd_toEndOf="@id/iv_dot_distribution"
                    app:layout_constraintStart_toStartOf="@id/iv_dot_distribution"
                    app:layout_constraintTop_toBottomOf="@id/iv_dot_distribution" />

                <ImageView
                    android:id="@+id/iv_dot_ipo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/dot_selector"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="@id/guideline_horizontal_ipo"
                    app:tint="#B3B7C3" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Book Building"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_book_building"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_book_building"
                    app:txtColor="grey"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_book_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_book_title"
                    app:txtFor="body"
                    tools:text="270 - 280" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_book_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_book_title"
                    app:txtFor="body"
                    tools:text="10 Jul - 14 Jul" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_offering_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Offering"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_offering"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_offering"
                    app:txtColor="grey"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_offering_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_offering_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_offering_title"
                    app:txtFor="body"
                    tools:text="270" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_offering_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_offering_title"
                    app:txtFor="body"
                    tools:text="27 Jul - 31 Jul" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_allocation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Allocation"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_allocation"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_allocation"
                    app:txtColor="grey"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_allocation_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_allocation_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_allocation_title"
                    app:txtFor="body"
                    android:visibility="gone"
                    tools:text="Completed" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_allocation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_allocation_title"
                    app:txtFor="body"
                    tools:text="01 Aug 2023" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_distribution_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Distribution"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_distribution"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_distribution"
                    app:txtColor="grey"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_distribution_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_distribution_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_distribution_title"
                    app:txtFor="body"
                    android:visibility="gone"
                    tools:text="Completed" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_distribution_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_distribution_title"
                    app:txtFor="body"
                    tools:text="01 Aug 2023" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_ipo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="IPO"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_ipo"
                    app:layout_constraintTop_toTopOf="@id/iv_dot_ipo"
                    android:paddingBottom="16dp"
                    app:txtColor="grey"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_eipo_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_ipo_title"
                    app:txtFor="body"
                    tools:text="01 Aug 2023" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_info_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="The deadline for ordering this e-IPO has expired"
                    app:txtFor="caption"
                    android:background="@drawable/rounded_fff7e9_stroke_ffb020_8"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="54dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_ipo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintRight_toRightOf="@id/guideline_end"
                    app:txtColor="yellow" />

                <View
                    android:id="@+id/divider_my_ipo"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ddeaee"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ipo_title" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_my_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="My IPO Order"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/divider_my_ipo"
                    app:txtFor="title"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_status_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="SENT"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_my_ipo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:txtStyle="softBold"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_price_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Price"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_ipo"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_price_ipo_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="270"
                    app:layout_constraintRight_toRightOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_price_ipo"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_lot_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lot"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_price_ipo"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_lot_ipo_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="1"
                    app:txtStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_lot_ipo"
                    app:txtFor="body" />

                <View
                    android:id="@+id/divider_lot_my_ipo"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#ddeaee"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintRight_toRightOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_lot_ipo" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_total_ipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Total Order"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/divider_lot_my_ipo"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_total_ipo_val"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Rp13,500"
                    app:txtStyle="bold"
                    app:layout_constraintRight_toRightOf="@id/guideline_end"
                    app:layout_constraintTop_toTopOf="@id/tv_total_ipo"
                    app:txtFor="body" />

                <LinearLayout
                    android:id="@+id/ly_my_ipo_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_f0f5f8_8"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="52dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="54dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_total_ipo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/guideline_start"
                    app:layout_constraintRight_toRightOf="@id/guideline_end">

                    <ImageView
                        android:id="@+id/iv_order_info_eipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_solid_blue" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_order_info_eipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/info_eipo_status_approved"
                        app:txtFor="caption"
                        app:txtColor="blue" />
                </LinearLayout>

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_my_ipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:constraint_referenced_ids="tv_status_ipo, tv_my_ipo,divider_my_ipo, divider_lot_my_ipo, tv_price_ipo, tv_price_ipo_val, tv_lot_ipo, tv_lot_ipo_val, tv_total_ipo, tv_total_ipo_val"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>