<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmEIPO"
            type="com.bcasekuritas.mybest.app.feature.e_ipo.EIPOViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar_e_i_p_o"
            layout="@layout/layout_toolbar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

<!--        <com.bcasekuritas.mybest.widget.searchbar.CustomSearchBar-->
<!--            android:id="@+id/search_bar"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintStart_toStartOf="@id/guideline_start"-->
<!--            app:layout_constraintEnd_toEndOf="@id/guideline_end"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/ly_toolbar_e_i_p_o"/>-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_eipo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_stock_eipo"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar_e_i_p_o"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- layout no active investment -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar_e_i_p_o"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_no_eipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_document_no_data"
                app:layout_constraintBottom_toTopOf="@id/btn_back_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_no_item_found_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="There are no E-IPO currently"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:txtStyle="bold"
                app:txtFor="bigBold"
                app:layout_constraintTop_toBottomOf="@id/iv_no_eipo"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_no_item_found_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Any ongoing E-IPOs will be shown here."
                android:textAlignment="center"
                app:txtFor="body"
                app:layout_constraintTop_toBottomOf="@id/tv_no_item_found_title"/>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_back_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="Back To Home"
                app:btnStyle="primary"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>