<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmStockDetailNewsAndReports"
            type="com.bcasekuritas.mybest.app.feature.stockdetail.newsandreports.NewsAndReportsViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_news_reports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_news"
                    style="@style/Widget.App.Chip.White.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:checked="true"
                    android:text="News"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_report"
                    style="@style/Widget.App.Chip.White.Blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:textAlignment="center"
                    android:text="Reports"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

            </com.google.android.material.chip.ChipGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sd_news"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/item_list_news"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/chipGroup_news_reports"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_sd_reports"
                android:layout_width="0dp"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                tools:listitem="@layout/item_list_stock_detail_reports"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintTop_toBottomOf="@id/chipGroup_news_reports"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>