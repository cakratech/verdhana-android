<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmFinancialIncomeStatement"
            type="com.bcasekuritas.mybest.app.feature.stockdetail.financial.incomestatement.IncomeStatementViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fis_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_period_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_ffffff_stroke_dfdfdf_8"
                android:padding="10dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/radio_group_fis"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_period_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_annual"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_stock_detail_info_down"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:txtFor="body" />

                <ImageView
                    android:id="@+id/iv_stock_detail_info_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_chevron_down"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_fis_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="12dp"
                android:visibility="gone"
                android:src="@drawable/ic_menu_white"
                android:background="@drawable/bg_layout_border_10"
                android:backgroundTint="@color/textSecondaryBluey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <RadioGroup
                android:id="@+id/radio_group_fis"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="1dp"
                android:background="@drawable/rounded_ffffff_stroke_dfdfdf_8"
                app:layout_constraintEnd_toStartOf="@id/iv_fis_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <RadioButton
                    android:id="@+id/rb_fis_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_rp"
                    android:drawableTint="@color/color_333333_5e5e5e"
                    android:button="@null"
                    android:paddingStart="15dp"
                    android:background="@drawable/bg_button_radius_left"
                    android:backgroundTint="@color/color_fof5f8_ffffff"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_fis_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_percent_black"
                    android:drawableTint="@color/color_333333_5e5e5e"
                    android:button="@null"
                    android:paddingStart="10dp"
                    android:background="@drawable/bg_button_radius_right"
                    android:backgroundTint="@color/color_fof5f8_ffffff" />
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_fis_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_fis_filter"
            app:layout_constraintEnd_toEndOf="@id/guideline_border">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:minHeight="35dp"
                android:paddingHorizontal="5dp"
                android:gravity="center_vertical"
                android:text=""
                app:txtFor="caption"
                app:txtStyle="bold"
                android:background="@color/bgPrimary"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/hsv_fis_revenue"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="@string/text_revenue"
                app:txtFor="caption"
                app:txtStyle="bold" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_cogs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:text="@string/text_cost_of_goods_sold"
                app:txtFor="caption"
                android:gravity="center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:text="Gross Profit"
                app:txtFor="caption"
                app:txtStyle="bold"
                android:gravity="center_vertical"  />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_operating_expenses"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:minHeight="30dp"
                android:layout_marginLeft="16dp"
                android:text="Operating Expenses"
                app:txtFor="caption"
                android:gravity="center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="EBITDA"
                app:txtFor="caption"
                app:txtStyle="bold"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Operating Profit/EBIT"
                app:txtFor="caption"
                app:txtStyle="bold"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:text="Income Before Tax"
                app:txtFor="caption" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Net Income"
                app:txtFor="caption"
                app:txtStyle="bold"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_income_statement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingEnd="3dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            tools:listitem="@layout/item_list_income_statement"
            android:clickable="false"
            android:visibility="gone"
            tools:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toEndOf="@id/guideline_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_fis_period"/>

        <include
            android:id="@+id/ly_no_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            layout="@layout/item_list_income_statement"
            app:layout_constraintStart_toEndOf="@id/guideline_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_fis_period"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>