<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmStockDetailBrokerSummary"
            type="com.bcasekuritas.mybest.app.feature.stockdetail.brokersummary.StockDetailBrokerSummaryViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:background="@color/bgWhite">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_ffffff_stroke_dfdfdf_8"
                android:drawableEnd="@drawable/ic_row_up"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="Filter"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toTopOf="parent"
                app:txtFor="title"
                app:txtStyle="softBold"/>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expand_broker_summary_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:el_expanded="false"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_filter">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.35" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.7" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_summary_title_broker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="Broker"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline_one"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_summary_broker"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="All"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/guideline_one"
                        app:layout_constraintTop_toBottomOf="@id/tv_broker_summary_title_broker"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_summary_title_trade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Trade"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/guideline_two"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_summary_trade"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="All"
                        app:layout_constraintStart_toEndOf="@id/guideline_two"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_broker_summary_title_trade"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_sort_by"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:text="Sort By"
                        app:layout_constraintStart_toEndOf="@id/guideline_one"
                        app:layout_constraintEnd_toStartOf="@id/guideline_two"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_summary_sort_by"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:text="Value"
                        app:layout_constraintStart_toEndOf="@id/guideline_one"
                        app:layout_constraintEnd_toStartOf="@id/guideline_two"
                        app:layout_constraintTop_toBottomOf="@id/tv_sort_by"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="From"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_broker_summary_broker" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_from_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableStart="@drawable/ic_calendar_outline"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="--/--/----"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_to_val"
                        app:layout_constraintTop_toBottomOf="@id/tv_from"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/tv_to_val"
                        app:layout_constraintTop_toTopOf="@id/tv_from" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_to_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableStart="@drawable/ic_calendar_outline"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="--/--/----"
                        app:layout_constraintLeft_toRightOf="@id/tv_from_val"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_to"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <CheckBox
                        android:id="@+id/checkbox_net_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.App.CheckBox"
                        android:layout_marginTop="10dp"
                        android:text="Net Value"
                        android:visibility="visible"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_from_val" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_reset_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:text="Reset filter"
                        app:txtFor="body"
                        app:txtColor="blue"
                        app:txtStyle="softBold"
                        android:drawableTint="@color/bgBCABlue"
                        android:drawableStart="@drawable/ic_clockwise"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/checkbox_net_value"
                        app:layout_constraintBottom_toBottomOf="@+id/checkbox_net_value"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/bgPrimary"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="5dp"
                        android:minHeight="40dp"
                        android:orientation="horizontal">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Buy"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="BLot"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="BVal(K)"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="B.Avg"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:background="#ddeaee"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="#"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:background="#ddeaee"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Sell"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="SLot"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="SVal(K)"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="S.Avg"
                            app:txtFor="body"
                            app:txtStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_sd_broker_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        tools:itemCount="100"
                        tools:listitem="@layout/item_stock_detail_tab_broker_summary"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

