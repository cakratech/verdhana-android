<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.bcasekuritas.mybest.widget.swipebutton.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoClose="true"
        app:preview="none">

        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginRight="8dp"
            android:background="@color/brandSuccess"
            android:gravity="center"
            android:text="BUY"
            android:textColor="@color/textWhite" />

        <TextView
            android:id="@+id/btn_sell"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="8dp"
            android:background="@color/brandWarning"
            android:gravity="center"
            android:text="SELL"
            android:textColor="@color/textWhite" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_stock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:padding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ly_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/iv_stock"
                app:layout_constraintLeft_toRightOf="@id/iv_stock"
                app:layout_constraintBottom_toBottomOf="@id/iv_stock"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ly_stock_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.1">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        tools:text="BBCA" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_lot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textColor="#9A9A9A"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_code"
                        app:layout_constraintRight_toRightOf="parent"
                        app:txtFor="caption"
                        tools:text="1 Lot" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.3">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_avg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#9A9A9A"
                        app:txtFor="caption"
                        tools:text="Avg. 99,800.99" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#9A9A9A"
                        android:layout_marginTop="5dp"
                        app:txtFor="caption"
                        tools:text="Last. 8.800" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2.6">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:textAlignment="textEnd"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        tools:text="Rp390,000,000,000" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_profit_loss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="5dp"
                        app:txtColor="green"
                        app:txtFor="caption"
                        tools:text="+168.500.000.000" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/ly_content"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.bcasekuritas.mybest.widget.swipebutton.SwipeLayout>


</layout>
