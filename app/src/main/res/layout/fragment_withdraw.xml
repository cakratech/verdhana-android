<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmWithdraw"
            type="com.bcasekuritas.mybest.app.feature.rdn.withdraw.WithdrawViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_withdraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar_withdraw"
            layout="@layout/layout_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar_withdraw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout_withdraw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/button_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="@color/bgWhite">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.95" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_desc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_transfer_to"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintEnd_toEndOf="@id/guideline_end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:txtFor="caption"
                            app:txtColor="grey"
                            app:txtStyle="softBold" />

                        <LinearLayout
                            android:id="@+id/ll_withdraw_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/bgLightGrey"
                            android:layout_marginTop="20dp"
                            android:foregroundGravity="center"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:paddingHorizontal="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cl_withdraw_account">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_withdraw_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minHeight="20dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/text_withdrawable_amount"
                                    app:txtFor="caption"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/iv_withdraw_amount_info"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_text_info"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="3dp"
                                    app:layout_constraintStart_toEndOf="@id/tv_title_withdraw_amount"
                                    app:layout_constraintTop_toTopOf="@id/tv_title_withdraw_amount"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_title_withdraw_amount" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_withdrawable_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_marginTop="5dp"
                                    app:txtFor="body"
                                    app:txtStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_title_withdraw_amount"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_processed_amount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:minHeight="20dp"
                                    android:text="@string/text_processed_amount"
                                    app:txtFor="caption"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/iv_processed_amount_info"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_text_info"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="3dp"
                                    app:layout_constraintStart_toEndOf="@id/tv_title_processed_amount"
                                    app:layout_constraintTop_toTopOf="@id/tv_title_processed_amount"
                                    app:layout_constraintBottom_toBottomOf="@id/tv_title_processed_amount" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_processed_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_title_processed_amount"
                                    app:txtFor="body"
                                    app:txtStyle="bold" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_withdraw_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_030e37_8"
                            android:layout_marginTop="12dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp"
                            app:layout_constraintEnd_toStartOf="@id/guideline_end"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintTop_toBottomOf="@id/tv_desc">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="vertical"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_bank_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_bank_account"
                                    app:txtStyle="softBold"
                                    app:txtColor="white"
                                    android:lineSpacingExtra="4sp"
                                    android:letterSpacing="0.01"
                                    android:alpha="0.5"
                                    app:txtFor="caption" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_topup_num_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtColor="white"
                                    app:txtFor="big" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_profile_topup_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtColor="white"
                                    app:txtFor="caption"
                                    android:lineSpacingExtra="4sp"
                                    android:letterSpacing="0.01" />
                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Amount"
                            app:txtFor="body"
                            app:txtStyle="softBold"
                            app:layout_constraintEnd_toStartOf="@id/guideline_end"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintTop_toBottomOf="@id/ll_withdraw_amount"/>

                        <RelativeLayout
                            android:id="@+id/rl_amount"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:padding="8dp"
                            android:background="@drawable/rounded_ffffff_stroke_dfdfdf_8"
                            app:layout_constraintEnd_toStartOf="@id/guideline_end"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintTop_toBottomOf="@id/tv_amount">

                            <EditText
                                android:id="@+id/et_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginEnd="6dp"
                                android:layout_toStartOf="@id/tv_max_amount"
                                android:hint="Enter amount"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:background="@null"/>

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_max_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:text="Max. Amount"
                                app:txtFor="caption"
                                app:txtColor="blue"
                                app:txtStyle="softBold"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_error_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Minimum withdraw 50.000"
                            android:layout_marginTop="5dp"
                            app:txtFor="body"
                            app:txtStyle="softBold"
                            app:txtColor="red"
                            android:visibility="gone"
                            tools:visibility="visible"
                            app:layout_constraintEnd_toStartOf="@id/guideline_end"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintTop_toBottomOf="@id/rl_amount"/>


                        <LinearLayout
                            android:id="@+id/ll_withdraw_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/bg_square_blue_info"
                            android:backgroundTint="@color/bgYellow"
                            android:orientation="vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="14dp"
                            app:layout_constraintEnd_toStartOf="@id/guideline_end"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintTop_toBottomOf="@id/tv_error_amount">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:src="@drawable/ic_cirle_info" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_step_withdraw_1"
                                    app:txtColor="darkOrange"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:src="@drawable/ic_cirle_info" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_step_withdraw_2"
                                    app:txtColor="darkOrange"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:src="@drawable/ic_cirle_info" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_step_withdraw_3"
                                    app:txtColor="darkOrange"
                                    app:txtFor="body" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut"
                android:textAllCaps="false"
                app:btnStyle="default"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:textSize="16sp"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>