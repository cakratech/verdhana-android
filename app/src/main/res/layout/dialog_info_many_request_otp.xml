<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:background="@drawable/bg_bottom_sheet">

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_close"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close"
            android:gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="h4"
            app:txtStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="Too Many OTP Request!"
            app:layout_constraintTop_toBottomOf="@id/button_close"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:text="You can contact our Customer Service at 1500888 ext 9 or halo@bcasekuritas.co.id for further assistance."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:txtFor="body" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/description_bahasa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:text="Anda bisa menghubungi Customer Service kami di 1500888 ext 9 untuk bantuan lebih lanjut."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:txtStyle="italic"
            app:txtFor="caption" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="OK"
            app:btnStyle="primary"
            app:layout_constraintTop_toBottomOf="@id/description_bahasa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>