<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_info_close"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close_black"
            android:gravity="end"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/button_info_close"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop Loss / Take Profit"
                    
                    app:txtFor="title"
                    app:txtStyle="bold"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategi untuk membatasi kerugian atau menetapkan keuntungan. Ketika kondisi compare tercapai, order akan dikirim sesuai dengan harga jual."
                    
                    android:layout_marginTop="12dp"
                    app:txtFor="title"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_desc_eng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strategy to limit your losses or secure your profit. When compare is triggered, a sell order is placed at a predetermined sell price."
                    
                    android:layout_marginTop="12dp"
                    app:txtFor="caption"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_compare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Compare"
                    
                    app:txtFor="title"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:layout_marginTop="16dp"
                    app:txtStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_desc_eng"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expand_compare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:el_expanded="false"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_compare">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kondisi yang harus dipenuhi sebelum order jual terkirim. Misalnya, jika compare adalah last price, maka order akan terkirim ketika last price tercapai."
                            app:txtFor="title"
                            />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Condition that triggers your order. If you choose to compare by last price, the sell order will be sent when the last price is reached."
                            app:txtFor="caption"
                            />

                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sell_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sell Price"
                    
                    app:txtFor="title"
                    android:layout_marginTop="16dp"
                    android:drawableEnd="@drawable/ic_bot_row"
                    app:txtStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expand_compare"/>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expand_sell_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:el_expanded="false"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sell_price">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga yang ditetapkan untuk menjual saham."
                            app:txtFor="title"
                            />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Predetermined price level at which you want to sell your shares."
                            app:txtFor="caption"
                            />

                    </LinearLayout>

                </net.cachapa.expandablelayout.ExpandableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/scrollView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:btnStyle="default"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
