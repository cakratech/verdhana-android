<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmRankingTabBrokerSummary"
            type="com.bcasekuritas.mybest.app.feature.brokersummary.tabranking.RankingTabBrokerSummaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_filter"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_layout_border_5"
            android:drawableEnd="@drawable/ic_row_up"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:text="Filter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="title" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_broker_summary_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_expanded="false"
            app:layout_constraintTop_toBottomOf="@id/tv_filter"
            app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:text="From"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_from_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="--/--/----"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_to_val"
                    app:layout_constraintTop_toBottomOf="@id/tv_from"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_to_val"
                    app:layout_constraintTop_toTopOf="@id/tv_from" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_to_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableStart="@drawable/ic_calendar_outline"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="--/--/----"
                    app:layout_constraintLeft_toRightOf="@id/tv_from_val"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_to"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Sort By"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_to_val" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_sort_val"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_layout_border_5"
                    android:drawableEnd="@drawable/ic_bot_row"
                    android:gravity="center_vertical"
                    android:text="Value"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sort"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_apply_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="3dp"
                    android:text="Reset Filter"
                    app:txtStyle="softBold"
                    android:layout_marginTop="16dp"
                    app:txtColor="blue"
                    android:drawableStart="@drawable/ic_clockwise"
                    android:drawableTint="@color/bgBCABlue"
                    app:txtFor="body"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sort_val" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </net.cachapa.expandablelayout.ExpandableLayout>

        <RelativeLayout
            android:id="@+id/ly_rank"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="@color/bgPrimary"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                app:txtStyle="bold"
                android:layout_centerInParent="true"
                android:text="Rank"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_code"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:background="@color/bgPrimary"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@id/ly_rank"
            app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                app:txtStyle="bold"
                android:layout_centerInParent="true"
                android:text="Code"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/borderline"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintLeft_toRightOf="@id/ly_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bgPrimary"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center"
                        android:text="Value(T)"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical|center"
                        android:text="Volume(L)"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical|center"
                        android:text="Freq"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:text="Broker Name"
                        app:txtFor="body"
                        app:txtStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ly_code"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_broker_summary_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_ranking_code_tab_broker_summary"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                <HorizontalScrollView
                    android:id="@+id/horizontal_scroll_rcv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/rcv_broker_summary_code"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_broker_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        tools:listitem="@layout/item_ranking_tab_broker_summary"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </HorizontalScrollView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

