<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_order_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Confirm Exercise Order"
                app:layout_constraintBottom_toBottomOf="@id/button_dialog_order_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:txtFor="h3"
                app:txtStyle="softBold"/>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/button_dialog_order_close"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="end"
                app:btnStyle="transBlack"
                app:icon="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_dialog_order_saham"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:foregroundGravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_layout_border_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_order_confirm">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="2"
                    tools:text="BA"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:txtColor="white"
                    app:txtStyle="bold"
                    app:txtFor="caption"
                    app:layout_constraintLeft_toLeftOf="@id/image_logo"
                    app:layout_constraintRight_toRightOf="@id/image_logo"
                    app:layout_constraintBottom_toBottomOf="@id/image_logo"
                    app:layout_constraintTop_toTopOf="@id/image_logo"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_logo"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_stock_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="BBCA"
                            app:txtColor="black"
                            app:txtFor="title"
                            app:txtStyle="softBold" />

                    </LinearLayout>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        tools:text="Bank Central Asia Tbk."
                        app:txtFor="body"
                        app:txtColor="black"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_order_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Order Type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/cl_dialog_order_saham"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dialog_order_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:text="Right Issue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/cl_dialog_order_saham"
                app:txtFor="body" />

            <View
                android:id="@+id/vi_dialog_order_divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/borderline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_type" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_order_compare_price_auto_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Compare Price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/vi_dialog_order_divider2"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_order_compare_price_auto_order_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/vi_dialog_order_divider2"
                app:txtFor="body"
                />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_auto_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_title_dialog_order_compare_price_auto_order, tv_title_dialog_order_compare_price_auto_order_val"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_share_exercised"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Shares Exercised"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_title_dialog_order_compare_price_auto_order"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dialog_share_exercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/tv_title_dialog_share_exercised"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Buy Price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_share_exercise"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dialog_buy_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:text="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_share_exercise"
                app:txtFor="body" />

            <View
                android:id="@+id/vi_dialog_order_divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/borderline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_buy_price" />


            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_dialog_order_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/tv_dialog_order_total"
                app:layout_constraintBottom_toBottomOf="@id/tv_dialog_order_total"
                app:txtFor="title"
                app:txtStyle="softBold" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dialog_order_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Rp0"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="@id/vi_dialog_order_divider3"
                app:txtFor="h4"
                app:txtStyle="softBold" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_dialog_order_terms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/text_terms_conditions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                app:txtFor="caption"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_order_total" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
