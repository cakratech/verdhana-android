<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmPortfolioDetail"
            type="com.bcasekuritas.mybest.app.feature.portfolio.portfoliodetail.PortfolioDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- box offering -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_stock_info"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            android:background="@drawable/rounded_015fcd_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <ImageView
                android:id="@+id/iv_stock"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                tools:text="BA"
                android:visibility="gone"
                tools:visibility="visible"
                app:txtColor="white"
                app:txtStyle="bold"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="@id/iv_stock"
                app:layout_constraintRight_toRightOf="@id/iv_stock"
                app:layout_constraintBottom_toBottomOf="@id/iv_stock"
                app:layout_constraintTop_toTopOf="@id/iv_stock"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_stock"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        tools:text="BBCA"
                        app:txtStyle="softBold"
                        app:txtColor="white"
                        app:txtFor="body"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_notation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/textYellow"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="EX"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_code"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_code"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_info_special_notes_acceleration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="Acceleration"
                        android:visibility="gone"
                        app:txtColor="blue"
                        tools:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/tv_info_special_notes"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                </LinearLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    tools:text="Bank Central Asia Tbk."
                    app:txtColor="white"
                    app:txtFor="body" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_portfolio_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorFullWidth="true"
            android:layout_marginTop="8dp"
            android:background="@color/bgWhite"
            style="@style/Widget.App.TabLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_stock_info">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portfolio" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_portfolio_detail"
            app:layout_constraintBottom_toTopOf="@id/ly_button_portfolio_detail"/>

        <LinearLayout
            android:id="@+id/ly_button_portfolio_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_shadow_top"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_fast"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_flash_white"
                android:drawablePadding="10dp"
                android:text="Fast"
                app:btnStyle="orange" />

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_sell"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="Sell"
                app:btnStyle="red" />

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_buy"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Buy"
                app:btnStyle="green" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
