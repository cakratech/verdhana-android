<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_title_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_confirm"
            app:txtStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="bigBold" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_transfer_to"
            android:textColor="@color/textSecondary"
            app:txtFor="smallBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_confirm" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_transfer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_030e37_8"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_bank_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_bank_account"
                    android:lineSpacingExtra="4sp"
                    app:txtColor="white"
                    android:letterSpacing="0.01"
                    android:alpha="0.7"
                    app:txtFor="caption" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_topup_num_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-"
                    app:txtStyle="softBold"
                    app:txtColor="white"
                    app:txtFor="title" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_profile_topup_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-"
                    app:txtColor="white"
                    app:txtFor="caption"
                    app:txtStyle=""
                    android:lineSpacingExtra="4sp"
                    android:letterSpacing="0.01" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/vi_line_amount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/borderline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_transfer" />

        <LinearLayout
            android:id="@+id/ll_proceeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vi_line_amount">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_proceeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/text_amount"
                app:txtFor="body" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_proceeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:layout_gravity="center_vertical|end"
                app:txtStyle="bold"
                android:layout_weight="1"
                android:text="0"
                app:txtFor="bigBold" />
        </LinearLayout>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_terms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:txtFor="body"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/rounded_ebebeb_stroke_333333_12"
            android:text="Withdrawals to a bank account different from the RDN bank may incur a transfer fee."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/textSecondary"
            app:layout_constraintTop_toBottomOf="@id/ll_proceeds" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_confirm"
            app:btnStyle="primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_terms" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/button_confirm_close"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title_confirm"
            app:layout_constraintBottom_toBottomOf="@id/tv_title_confirm"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>