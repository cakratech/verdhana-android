<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="title"
        android:text="Confirm E-IPO Order"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/btn_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"/>

    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.Icon"
        app:btnStyle="transBlack"
        app:icon="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bg_circle"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_stock_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="title"
        android:text="Confirm E-IPO Order"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintBottom_toTopOf="@id/tv_company"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="Confirm E-IPO Order"
        app:layout_constraintStart_toStartOf="@id/tv_stock_code"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_code"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"/>

    <View
        android:id="@+id/view_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/borderline"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/tv_company"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="Price"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/tv_price_val"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/view_1"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="Rp270"
        app:layout_constraintStart_toEndOf="@id/tv_price"
        app:layout_constraintTop_toTopOf="@id/tv_price"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_lot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="Lot"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/tv_lot_val"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_lot_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="10"
        app:layout_constraintStart_toEndOf="@id/tv_lot"
        app:layout_constraintTop_toTopOf="@id/tv_lot"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        />

    <View
        android:id="@+id/view_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/borderline"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/tv_lot"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:text="Total"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toStartOf="@id/tv_total_val"
        app:layout_constraintTop_toBottomOf="@id/view_2"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_total_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:txtFor="title"
        android:text="Rp2.700"
        app:layout_constraintStart_toEndOf="@id/tv_total"
        app:layout_constraintTop_toTopOf="@id/tv_total"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_confirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:txtFor="body"
        android:layout_marginTop="20dp"
        android:text="By clicking Confirm I have read and agreed ti the Terms &amp; Conditions."
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/tv_total"
        />
    
    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:btnStyle="primary"
        android:text="Confirm"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmation"/>

</androidx.constraintlayout.widget.ConstraintLayout>