<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmGlobal"
            type="com.bcasekuritas.mybest.app.feature.global.GlobalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar_profile_global"
            layout="@layout/layout_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar_profile_global"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="15dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.05" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.95"/>

                    <com.bcasekuritas.mybest.widget.searchbar.CustomSearchBar
                        android:id="@+id/searchbar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline_start"
                        app:layout_constraintEnd_toStartOf="@id/guideline_end"/>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_layout_global_market"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorHeight="2dp"
                        android:layout_marginTop="8dp"
                        app:tabRippleColor="@null"
                        app:tabIndicatorColor="@color/bgBCABlue"
                        style="@style/Widget.App.TabLayout.GlobalMarket"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/searchbar"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_tab_global_market"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tab_layout_global_market"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <FrameLayout
                        android:id="@+id/frml_container_tab_rank"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tab_layout_global_market">
                        <include
                            layout="@layout/fragment_rank_global"/>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>