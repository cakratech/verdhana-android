<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmStockDetailRunningTrade"
            type="com.bcasekuritas.mybest.app.feature.stockdetail.runningtrade.StockDetailRunningTradeViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    app:singleSelection="true"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/guideline_start"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sdbs_price"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:textAlignment="center"
                        android:checked="false"
                        android:textSize="14dp"
                        android:text="Price"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sdbs_time"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:textAlignment="center"
                        android:text="Time"
                        android:textSize="14dp"
                        android:checked="true"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sdbs_buyer"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:text="Buyer"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_sdbs_seller"
                        style="@style/Widget.App.Chip.White.Blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dp"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:text="Seller"
                        app:chipMinTouchTargetSize="24dp" />

                </com.google.android.material.chip.ChipGroup>

                <LinearLayout
                    android:id="@+id/ly_row_running_trade"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/bgLightGrey"
                    android:gravity="center_vertical"
                    android:weightSum="5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="Time"
                        android:textAlignment="center"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Code"
                        android:textAlignment="center"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Price"
                        android:textAlignment="center"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Chg"
                        android:textAlignment="center"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lot"
                        android:textAlignment="center"
                        app:txtFor="body"
                        app:txtStyle="bold" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_sd_running_trade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    tools:listitem="@layout/item_running_trade"
                    tools:itemCount="10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ly_row_running_trade"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>