<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="150dp"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_min"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:icon="@drawable/ic_minus"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:enabled="false"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_qty"
        />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
            android:textColor="@color/txtBlackWhite"
            android:textSize="12sp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/btn_min"
            app:layout_constraintTop_toTopOf="@id/btn_min"
            app:layout_constraintBottom_toBottomOf="@id/btn_min"
            app:layout_constraintEnd_toStartOf="@id/btn_plus"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:icon="@drawable/ic_plus"
        app:iconSize="18dp"
        app:iconGravity="textStart"
        android:padding="0dp"
        app:iconPadding="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_min"
        app:layout_constraintStart_toEndOf="@id/et_qty"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>