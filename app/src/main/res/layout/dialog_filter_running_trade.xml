<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp"
            android:paddingTop="24dp">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                app:txtFor="h3"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black"
                app:layout_constraintBottom_toBottomOf="@id/tv_sort"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_sort" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Category"
                app:txtFor="title"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sort" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2.5"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_type">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_stocks"
                    style="@style/Widget.App.Chip.Blue.Solid.White.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Stocks"
                    android:checked="true"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_index"
                    style="@style/Widget.App.Chip.Blue.Solid.White.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Index"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_subsector"
                    style="@style/Widget.App.Chip.Blue.Solid.White.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sector"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_focus_stock"
                    style="@style/Widget.App.Chip.Blue.Solid.White.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watchlist"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_stocks_in_portfolio"
                    style="@style/Widget.App.Chip.Blue.Solid.White.Stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stocks in Portfolio"
                    android:textSize="14dp"
                    app:chipMinTouchTargetSize="24dp" />

            </com.google.android.material.chip.ChipGroup>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Index"
                app:txtFor="title"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chipGroup_type" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_index_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_bot_row"
                app:txtFor="body"
                android:background="@drawable/bg_layout_border_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_index"/>

            <View
                android:id="@+id/view_dropdown"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_index_val" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_index_sector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                app:constraint_referenced_ids="tv_index, tv_index_val"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Price"
                app:txtFor="title"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_index_val" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="From"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <EditText
                android:id="@+id/et_price_from"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_layout_border_5"
                android:hint="Rp0"
                android:textColor="@color/txtBlackWhite"
                android:inputType="number"
                android:textColorHint="@color/textPrimary"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ic_until"
                app:layout_constraintTop_toBottomOf="@id/tv_from" />

            <View
                android:id="@+id/ic_until"
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/et_price_from"
                app:layout_constraintLeft_toRightOf="@id/et_price_from"
                app:layout_constraintRight_toLeftOf="@id/et_price_to"
                app:layout_constraintTop_toTopOf="@id/et_price_from" />


            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="To"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="@id/et_price_to"
                app:layout_constraintTop_toTopOf="@id/tv_from" />

            <EditText
                android:id="@+id/et_price_to"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_layout_border_5"
                android:drawablePadding="10dp"
                android:hint="Max"
                android:inputType="number"
                android:textColorHint="@color/textPrimary"
                android:textColor="@color/txtBlackWhite"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ic_until"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_price_from" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Change %"
                app:txtFor="title"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_price_to" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_from_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="From"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_change" />

            <EditText
                android:id="@+id/et_price_from_change"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_layout_border_5"
                android:hint="0"
                android:inputType="numberSigned"
                android:textColorHint="@color/textPrimary"
                android:textColor="@color/txtBlackWhite"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ic_until_change"
                app:layout_constraintTop_toBottomOf="@id/tv_from_change" />

            <View
                android:id="@+id/ic_until_change"
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/et_price_from_change"
                app:layout_constraintLeft_toRightOf="@id/et_price_from_change"
                app:layout_constraintRight_toLeftOf="@id/et_price_to_change"
                app:layout_constraintTop_toTopOf="@id/et_price_from_change" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_to_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="To"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="@id/et_price_to_change"
                app:layout_constraintTop_toTopOf="@id/tv_from_change" />

            <EditText
                android:id="@+id/et_price_to_change"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_layout_border_5"
                android:drawablePadding="10dp"
                android:hint="Max"
                android:inputType="numberSigned"
                android:textColorHint="@color/textPrimary"
                android:textColor="@color/txtBlackWhite"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ic_until_change"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_price_from_change" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Volume"
                app:txtFor="title"
                app:txtStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_price_from_change" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_from_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="From"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_volume" />

            <EditText
                android:id="@+id/et_price_from_volume"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_layout_border_5"
                android:hint="0"
                android:inputType="number"
                android:textColorHint="@color/textPrimary"
                android:textColor="@color/txtBlackWhite"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ic_until_volume"
                app:layout_constraintTop_toBottomOf="@id/tv_from_volume" />

            <View
                android:id="@+id/ic_until_volume"
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/et_price_from_volume"
                app:layout_constraintLeft_toRightOf="@id/et_price_from_volume"
                app:layout_constraintRight_toLeftOf="@id/et_price_to_volume"
                app:layout_constraintTop_toTopOf="@id/et_price_from_volume" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_to_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="To"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="@id/et_price_to_volume"
                app:layout_constraintTop_toTopOf="@id/tv_from_volume" />

            <EditText
                android:id="@+id/et_price_to_volume"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_layout_border_5"
                android:drawablePadding="10dp"
                android:hint="Max"
                android:inputType="number"
                android:textColorHint="@color/textPrimary"
                android:textColor="@color/txtBlackWhite"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/ic_until_volume"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_price_from_volume" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</layout>
