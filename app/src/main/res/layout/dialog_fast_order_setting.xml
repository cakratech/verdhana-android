<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Order Setting"
            app:layout_constraintBottom_toBottomOf="@id/btn_close"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/btn_close"
            app:txtFor="big"
            app:txtStyle="softBold" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_close"
            style="@style/Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:btnStyle="transBlack"
            app:icon="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_turn_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtStyle="softBold"
            android:layout_marginTop="8dp"
            android:text="Turn on or off these feature as you need"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/btn_close"
            app:txtFor="body" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_show_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtStyle="softBold"
            android:text="Show Order Confirmation"
            app:layout_constraintBottom_toBottomOf="@id/swtch_show_order"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/swtch_show_order"
            app:txtFor="body" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_prevent_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtStyle="softBold"
            android:text="Prevent Same Order"
            app:layout_constraintBottom_toBottomOf="@id/swtch_prevent_order"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/swtch_prevent_order"
            app:txtFor="body" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtStyle="softBold"
            android:text="Show Order Count"
            app:layout_constraintBottom_toBottomOf="@id/swtch_order_count"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/swtch_order_count"
            app:txtFor="body" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swtch_show_order"
            style="@style/ThemeOverlay.App.SwitchProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_turn_on" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swtch_prevent_order"
            style="@style/ThemeOverlay.App.SwitchProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/swtch_show_order" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swtch_order_count"
            style="@style/ThemeOverlay.App.SwitchProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/swtch_prevent_order" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            app:btnStyle="primary"
            app:layout_constraintEnd_toStartOf="@id/btn_save"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/btn_save" />

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Save"
            android:textAllCaps="false"
            app:btnStyle="primary"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@id/swtch_order_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
