<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vmAccount"
            type="com.bcasekuritas.mybest.app.feature.profile.profileaccount.AccountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar_profile_account"
            layout="@layout/layout_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar_profile_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout_account"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="16dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.95" />

                        <LinearLayout
                            android:id="@+id/ll_trading_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintEnd_toEndOf="@id/guideline_end">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_trading_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_trading_info"
                                app:txtFor="title"
                                app:txtStyle="bold"
                                android:textColor="@color/textPrimary"/>

                            <LinearLayout
                                android:id="@+id/ll_client_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_client_code"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_client_code"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_client_code"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="bold"
                                    app:txtFor="body" />

                                <ImageView
                                    android:id="@+id/iv_client_code_copy"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_copy_text"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_login_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp"
                                android:gravity="center_vertical">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_login_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_login_id"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_login_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="bold"
                                    app:txtFor="body" />

                                <ImageView
                                    android:id="@+id/iv_login_id_copy"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_copy_text"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_sid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_sid"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_sid"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_sre"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_sre"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_sre"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_sre_two"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_sre_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SRE 04"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_sre_two"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_bank_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_bank_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_rekening_bank_pencairan"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_bank_account"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textAlignment="textEnd"
                                    android:text="-"
                                    app:txtFor="body"
                                    app:txtStyle="softBold"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_personal_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintEnd_toEndOf="@id/guideline_end"
                            app:layout_constraintTop_toBottomOf="@id/ll_trading_info">

                            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                android:id="@+id/tv_personal_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_personal_info"
                                app:layout_constraintStart_toStartOf="@id/guideline_start"
                                app:layout_constraintTop_toBottomOf="@id/ll_trading_info"
                                app:txtFor="title"
                                app:txtStyle="bold" />

                            <LinearLayout
                                android:id="@+id/ll_ektp_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:visibility="gone"
                                android:orientation="horizontal">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_ektp_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/text_e_ktp_number"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"
                                    android:textColor="@color/textSecondary"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_ektp_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_ktp_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_ktp_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fa_text_name_ktp"
                                    android:layout_weight="1"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold" />

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_ktp_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/text_address"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_email_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_email_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/fa_text_email_address"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_email_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_mobile_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/fa_text_mobile_number"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_mobile_number"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_npwp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp">

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_title_npwp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/fa_text_npwp"
                                    app:txtFor="body"
                                    app:txtColor="grey"
                                    app:txtStyle="softBold"/>

                                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                                    android:id="@+id/tv_npwp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="5dp"
                                    android:gravity="end"
                                    android:textAlignment="textEnd"
                                    android:text="-"
                                    app:txtStyle="softBold"
                                    app:txtFor="body" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="20dp"
                                android:background="#F4F4F4" />
                        </LinearLayout>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:id="@+id/tv_delete_account"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="@string/text_delete_my_account"
                            app:txtFor="title"
                            app:txtColor="red"
                            app:txtStyle="softBold"
                            app:layout_constraintStart_toStartOf="@id/guideline_start"
                            app:layout_constraintEnd_toEndOf="@id/guideline_end"
                            app:layout_constraintTop_toBottomOf="@id/ll_personal_info"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>