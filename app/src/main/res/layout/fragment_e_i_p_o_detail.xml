<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmEIPODetail"
            type="com.bcasekuritas.mybest.app.feature.e_ipo.eipodetail.EIPODetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <include
            android:id="@+id/ly_toolbar"
            layout="@layout/layout_toolbar" />


        <!--        CHANGE WEIGHTSUM TO 3 WHEN ACTIVATED FAST ORDER BUTTON    -->

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_button_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="drop_shadow, ly_button_stock_detail"/>

        <View
            android:id="@+id/drop_shadow"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="-7dp"
            android:background="@drawable/bg_drop_shadow"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="@id/ly_button_stock_detail" />

        <LinearLayout
            android:id="@+id/ly_button_stock_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_sheet"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/ly_final_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Final Price"
                    app:txtStyle="softBold"
                    app:txtFor="body" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_final_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    app:txtFor="title"
                    app:txtStyle="bold"
                    tools:text="270" />

            </LinearLayout>

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/button_order"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Order"
                app:btnStyle="default" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@id/drop_shadow"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar">


        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_card_stock_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rounded_top_015fcd_8"
            android:padding="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_toolbar">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/ic_logo_grup_bca" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    app:txtColor="white"
                    app:txtFor="body"
                    app:txtStyle="softBold"
                    tools:text="BBCA" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:txtColor="white"
                    app:txtFor="body"
                    tools:text="Bank Central Asia Tbk." />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ly_button_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rounded_bottom_015ac1_8"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_card_stock_info">

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_prospectus"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Prospectus"
                app:btnStyle="transOutlineWhite"
                app:icon="@drawable/ic_download"
                app:iconSize="24dp" />

            <com.bcasekuritas.mybest.widget.button.CustomButton
                android:id="@+id/btn_summary"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="Summary"
                app:btnStyle="transOutlineWhite"
                app:icon="@drawable/ic_download" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            style="@style/Widget.App.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/bgWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_button_download"
            app:tabIndicatorColor="@color/tabIndicator"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="2dp">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:includeFontPadding="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/drop_shadow"
            app:layout_constraintTop_toBottomOf="@id/tab_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>