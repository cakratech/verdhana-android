<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmTabHistory"
            type="com.bcasekuritas.mybest.app.feature.portfolio.tabhistory.HistoryTabPortfolioViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgWhite">

            <ImageView
                android:id="@+id/btn_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/rounded_ffffff_stroke_dfdfdf_12"
                android:padding="5dp"
                android:src="@drawable/ic_filter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ly_attribute"
                app:layout_constraintRight_toRightOf="parent" />


            <!-- box Realized -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ly_realized_gain_loss"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginHorizontal="16dp"
                tools:visibility="visible"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_f0f5f8_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_filter"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_offering_portfolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_realize_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <LinearLayout
                    android:id="@+id/box_offering"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_offering_portfolio"
                    app:layout_constraintRight_toLeftOf="@id/iv_row"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Realized Gain/Loss"
                        app:txtFor="caption" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_realized_gain_loss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Rp0"
                        app:txtColor="secondaryGrey"
                        app:txtFor="big"
                        app:txtStyle="softBold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_chevron_right_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Attribute table -->
            <LinearLayout
                android:id="@+id/ly_attribute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/bgLightGrey"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:weightSum="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ly_realized_gain_loss">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="sans-serif-medium"
                    android:text="Type &amp; Code"
                    android:textAlignment="textStart"
                    app:txtFor="caption"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-medium"
                    android:text="Lot(s)"
                    android:textAlignment="center"
                    app:txtFor="caption"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:fontFamily="sans-serif-medium"
                    android:text="Price"
                    android:textAlignment="center"
                    app:txtFor="caption"
                    app:txtStyle="bold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Amount"
                    android:textAlignment="center"
                    app:txtFor="caption"
                    app:txtStyle="bold" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ly_attribute"
                tools:listitem="@layout/item_tab_history_portfolio_detail" />


            <!-- layout no data -->
            <LinearLayout
                android:id="@+id/ly_history_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_filter_not_found" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="There are no history yet"
                    android:textAlignment="center"
                    app:txtFor="h3"
                    app:txtStyle="softBold" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:text="All completed orders will be shown here."
                    android:textAlignment="center"
                    app:txtFor="body" />

            </LinearLayout>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="rcv_history" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>
