<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:id="@+id/ct_toolbar_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btnStyle="transBlack"
        app:icon="@drawable/ic_chevron_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:id="@+id/ct_toolbar_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btnStyle="transBlack"
        app:icon="@drawable/ic_back"
        android:scaleX="-1"
        android:layout_toEndOf="@id/ct_toolbar_next"/>

    <com.bcasekuritas.mybest.widget.button.CustomButton
        android:id="@+id/ct_toolbar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:btnStyle="transBlack"
        app:icon="@drawable/ic_share_outline"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>