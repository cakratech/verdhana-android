<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vmExerciseDetail"
            type="com.bcasekuritas.mybest.app.feature.rightissue.detail.ExerciseDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- box stock info -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_stock_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_015fcd_8"
            android:paddingHorizontal="16dp"
            android:paddingVertical="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                tools:text="BA"
                android:visibility="gone"
                tools:visibility="visible"
                app:txtColor="white"
                app:txtStyle="bold"
                app:txtFor="caption"
                app:layout_constraintLeft_toLeftOf="@id/iv_logo"
                app:layout_constraintRight_toRightOf="@id/iv_logo"
                app:layout_constraintBottom_toBottomOf="@id/iv_logo"
                app:layout_constraintTop_toTopOf="@id/iv_logo"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_logo"
                app:layout_constraintRight_toLeftOf="@id/tv_buy_sell"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        tools:text="BBCA"
                        app:txtStyle="softBold"
                        app:txtColor="white"
                        app:txtFor="body"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_notation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/textYellow"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="EX"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_code"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_code"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_info_special_notes_acceleration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="Acceleration"
                        android:visibility="gone"
                        app:txtColor="blue"
                        tools:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/tv_info_special_notes"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                </LinearLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    app:txtColor="white"
                    app:txtFor="caption"
                    tools:text="Bank Central Asia Tbk." />
            </LinearLayout>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_buy_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_25cbd6_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:txtColor="white"
                app:txtFor="body"
                app:txtStyle="softBold"
                android:text="Exercise" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- layout content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ly_stock_info"
            android:visibility="visible">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderline"
                app:layout_constraintTop_toTopOf="parent" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_idx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="IDX Order ID"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:txtColor="grey"
                app:txtFor="caption"
                app:txtStyle="softBold" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_idx"
                app:txtColor="grey"
                android:visibility="gone"
                app:txtFor="caption"
                app:txtStyle="softBold"
                tools:text="12345678765434567" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="12dp"
                android:text="open"
                android:textAllCaps="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:txtFor="caption"
                app:txtStyle="bold" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/borderline"
                app:layout_constraintTop_toBottomOf="@id/tv_status" />

            <LinearLayout
                android:id="@+id/ly_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/divider1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Price"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:textAlignment="textEnd"
                        app:txtFor="body"
                        app:txtStyle="softBold"
                        tools:text="5,000" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quantity"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        app:txtFor="body"
                        app:txtStyle="softBold"
                        tools:text="1,000" />

                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/borderline"/>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:text="Summary"
                    app:txtFor="body"
                    app:txtStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        app:txtFor="body"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        app:txtFor="body"
                        app:txtStyle="bold"
                        tools:text="Rp5,000,000" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.bcasekuritas.mybest.widget.button.CustomButton
            android:id="@+id/btn_withdraw_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:text="Withdraw"
            app:btnStyle="outlineRed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
