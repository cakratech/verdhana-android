<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <View
            android:id="@+id/ly_drop_down"
            android:layout_width="150dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/btn_option"
            app:layout_constraintRight_toRightOf="parent"/>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_buy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="BUY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:txtFor="caption"
            app:txtStyle="bold" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_stock_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="BBCA"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_buy_type"
            app:txtFor="title"
            app:txtStyle="bold" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_quantity_and_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="50 Lot, Rp150"
            app:txtColor="grey"
            app:txtStyle="softBold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_stock_code"
            app:txtFor="caption" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ASDJA9929JG99W99993"
            android:layout_marginTop="2dp"
            app:txtFor="caption"
            app:txtColor="grey"
            app:layout_constraintStart_toStartOf="@id/tv_quantity_and_price"
            app:layout_constraintTop_toBottomOf="@id/tv_quantity_and_price"/>

        <ImageView
            android:id="@+id/btn_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_option"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_status"
            app:layout_constraintTop_toTopOf="@id/tv_order_status" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-medium"
            tools:text="open"
            android:textAllCaps="true"
            app:txtFor="caption"
            app:txtStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/btn_option"
            app:layout_constraintTop_toTopOf="@id/tv_buy_type" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Condition"
            app:txtFor="caption"
            app:txtColor="grey"
            app:txtStyle="softBold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_stock_code" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_stop_loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:text="Stop Loss 0"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_take_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:text="Take Profit  0"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_stop_loss" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_no_of_slice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            tools:text="No. of slice : 10"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="12sp"
            tools:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_block_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            tools:text="Block Qty : 10"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_valid_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            tools:text="Valid Until : 10"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition" />

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_compare_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            tools:text="Compare Price"
            android:textColor="@color/black"
            android:visibility="gone"
            tools:visibility="visible"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_condition" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

