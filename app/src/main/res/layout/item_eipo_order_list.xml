<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ly_stock_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:weightSum="6"
            android:gravity="center_vertical"
            android:background="@color/bgWhite"
            android:paddingVertical="12dp">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="BBCA"
                app:txtStyle="bold"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_lot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="3"
                android:text="-"
                android:textAlignment="center"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                tools:text="8.000"
                app:txtFor="body"
                android:textAlignment="center"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_allot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="5"
                app:txtFor="body"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="SENT"
                    android:textAlignment="textEnd"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Rp24.000.000"
                    app:txtFor="body"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="2dp"
                    app:txtStyle="softBold" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ly_row"
            android:background="@color/borderline"/>

    </LinearLayout>

</layout>
