<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vmCreateEditPriceAlert"
            type="com.bcasekuritas.mybest.app.feature.pricealert.createedit.CreateEditPriceAlertViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite">

        <!-- tolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swpl_price_alert_create_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <!--Box Info-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_price_alert_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_0d54e1_16"
                    android:padding="16dp"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/image_stock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_code" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@id/image_stock"
                        app:layout_constraintTop_toTopOf="parent"
                        app:txtColor="white"
                        app:txtFor="title"
                        app:txtStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_stock_detail_info_down"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_chevron_down"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:alpha="0.5"
                        android:text="-"
                        app:layout_constraintEnd_toStartOf="@id/iv_stock_detail_info_down"
                        app:layout_constraintStart_toEndOf="@id/image_stock"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_detail_info_code"
                        app:txtColor="white"
                        app:txtFor="desc" />

                    <View
                        android:id="@+id/view_dropdown_stock"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_detail_info_name" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="0"
                        android:textColor="@color/textWhite"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_detail_info_name"
                        app:txtColor="white"
                        app:txtFor="big"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="0 (0.00%)"
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_price"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_detail_info_price"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_price"
                        app:txtColor="white"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_title_stock_detail_info_haircut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="end"
                        android:text="Haircut "
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_price"
                        app:layout_constraintEnd_toStartOf="@id/tv_stock_detail_info_haircut"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_detail_info_change"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_price"
                        app:txtColor="white"
                        app:txtFor="caption" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_haircut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="end"
                        android:text="0%"
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_price"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_price"
                        app:txtColor="white"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_special_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/textYellow"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="EX"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_code"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_detail_info_code"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_code"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_detail_info_special_notes_acceleration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/bg_layout_border_5_no_padding"
                        android:backgroundTint="@color/white"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="1dp"
                        tools:text="Acceleration"
                        android:visibility="gone"
                        app:txtColor="blue"
                        tools:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="@id/tv_stock_detail_info_code"
                        app:layout_constraintStart_toEndOf="@id/tv_stock_detail_info_special_notes"
                        app:layout_constraintTop_toTopOf="@id/tv_stock_detail_info_code"
                        app:txtFor="caption"
                        app:txtStyle="softBold" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_title_price_target"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/text_set_price_target"
                    app:txtFor="smallBold"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/cl_price_alert_info"/>

                <com.bcasekuritas.mybest.widget.adjuster.CustomQtyAdjusterPriceAlert
                    android:id="@+id/adjuster_price_target"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:sizeWidth="matchParent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_title_price_target"/>

                <LinearLayout
                    android:id="@+id/ll_fcepa_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_error_input">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip1"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:text="-10%"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip2"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        android:textSize="14dp"
                        android:text="-5%"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip3"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        android:textSize="14dp"
                        android:text="-3%"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip4"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        android:textSize="14dp"
                        android:text="+3%"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip5"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:layout_marginStart="8dp"
                        android:text="+5%"
                        app:chipMinTouchTargetSize="24dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip6"
                        style="@style/Widget.App.Chip.White.Blue.Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:layout_marginStart="8dp"
                        android:text="+10%"
                        app:chipMinTouchTargetSize="24dp" />

                </LinearLayout>

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_error_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="The price entered does not align with the fractional value"
                    android:textAlignment="center"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/adjuster_price_target"
                    app:txtColor="red"
                    app:txtFor="desc"
                    tools:visibility="visible" />

                <com.bcasekuritas.mybest.widget.edittext.CustomEditTextWithTitle
                    android:id="@+id/et_notes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:title="@string/text_notes"
                    android:visibility="gone"
                    app:isNoteIcon="true"
                    app:hint="Eg. Sell 10 lot When price reached this point"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintTop_toBottomOf="@id/adjuster_price_target"/>

                <com.bcasekuritas.mybest.widget.button.CustomButton
                    android:id="@+id/btn_submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:btnStyle="primary"
                    android:text="@string/text_add_price_alert"
                    android:textAllCaps="false"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guideline_end"
                    app:layout_constraintStart_toStartOf="@id/guideline_start" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>