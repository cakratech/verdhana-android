<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ly_stock_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:weightSum="3"
            android:gravity="center_vertical"
            android:background="@color/bgWhite"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_strat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy On Break"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARKO"
                    app:txtFor="body"
                    android:layout_marginTop="2dp"
                    app:txtStyle="bold" />

            </LinearLayout>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_resistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9.273"
                android:textAlignment="center"
                app:txtFor="body"
                />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_support"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9.021"
                app:txtFor="body"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ly_row"
            android:background="#C3C3C3"/>

    </LinearLayout>

</layout>
