<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:background="@color/bgWhite"
    android:orientation="horizontal">

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_last_price"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_change"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_percent"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_open"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_high"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_low"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_value"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_volume"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_freq"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textAlignment="center"
        app:txtFor="caption" />
</LinearLayout>