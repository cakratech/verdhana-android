<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmTrade"
            type="com.bcasekuritas.mybest.app.feature.stockdetail.trade.TradeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgWhite">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_trade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            android:text="Price"
            app:btnStyle="primary"
            app:selectionRequired="true"
            app:layout_constraintTop_toTopOf="parent"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_trade_price"
                style="@style/Widget.App.Chip.White.Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:ellipsize="end"
                app:chipMinTouchTargetSize="24dp"
                android:textSize="14dp"
                android:text="@string/text_price" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_trade_time"
                style="@style/Widget.App.Chip.White.Blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_time"
                app:chipMinTouchTargetSize="24dp"
                android:textSize="14dp"
                app:txtFor="smallBold" />
        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:id="@+id/ll_trade_table_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="visible"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group_trade">

            <TableLayout
                android:id="@+id/ll_trade_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgPrimary">

                <TableRow
                    android:gravity="center_vertical"
                    android:minHeight="30dp">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_price"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <View
                        android:id="@+id/view_divider_title1"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/borderline" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="Volume"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="Value(T)"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="Freq"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />
                </TableRow>
            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_trade_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="10"
                android:orientation="vertical"
                tools:listitem="@layout/item_trade_price"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/borderline" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_trade_table_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group_trade">

            <TableLayout
                android:id="@+id/trade_table_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgPrimary">

            <TableRow
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:background="@color/bgPrimary">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_time"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#DFDFDF" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_buy_lot"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_percent_buy"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_chart"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_sell"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingVertical="8dp"
                        android:text="@string/text_sell_lot"
                        android:textColor="@color/textPrimary"
                        app:txtFor="caption"
                        app:txtStyle="bold" />

                </TableRow>
            </TableLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_trade_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="10"
                android:orientation="vertical"
                tools:listitem="@layout/item_trade_time"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#DFDFDF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>