<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmByStockTabBrokerSummary"
            type="com.bcasekuritas.mybest.app.feature.brokersummary.tabbystock.ByStockTabBrokerSummaryViewModel" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgWhite">

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_layout_border_5"
                android:drawableEnd="@drawable/ic_row_up"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:text="Filter"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:txtFor="title" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expand_broker_summary_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_expanded="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_filter">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible">

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        android:text="Stock"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_stock_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:gravity="center_vertical"
                        android:text="BBCA"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_trade_val"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock"
                        app:txtFor="body" />

                    <View
                        android:id="@+id/view_dropdown_stock"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_stock_val"
                        app:layout_constraintRight_toRightOf="@id/tv_trade_val"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_val"/>

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trade"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/tv_trade_val"
                        app:layout_constraintTop_toTopOf="@id/tv_stock" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_trade_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:gravity="center_vertical"
                        android:text="All"
                        app:layout_constraintLeft_toRightOf="@id/tv_stock_val"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_trade"
                        app:txtFor="body" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        android:text="Broker"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_stock_val" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_broker_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:gravity="center_vertical"
                        android:text="All"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_sort_by_val"
                        app:layout_constraintTop_toBottomOf="@id/tv_broker"
                        app:txtFor="body" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_sort_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort By"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/tv_sort_by_val"
                        app:layout_constraintTop_toTopOf="@id/tv_broker" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_sort_by_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableEnd="@drawable/ic_bot_row"
                        android:gravity="center_vertical"
                        android:text="Total Value"
                        app:layout_constraintLeft_toRightOf="@id/tv_broker_val"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_sort_by"
                        app:txtFor="body" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="16dp"
                        android:text="From"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_broker_val" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_from_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableStart="@drawable/ic_calendar_outline"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="--/--/----"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_to_val"
                        app:layout_constraintTop_toBottomOf="@id/tv_from"
                        app:txtFor="body" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        app:txtFor="caption"
                        app:txtStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/tv_to_val"
                        app:layout_constraintTop_toTopOf="@id/tv_from" />

                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_to_val"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_layout_border_5"
                        android:drawableStart="@drawable/ic_calendar_outline"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:text="--/--/----"
                        app:layout_constraintLeft_toRightOf="@id/tv_from_val"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_to"
                        app:txtFor="body" />

                    <CheckBox
                        android:id="@+id/checkbox_net_value"
                        style="@style/Widget.App.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:text="Net Value"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_from_val" />


                    <com.bcasekuritas.mybest.widget.textview.CustomTextView
                        android:id="@+id/tv_apply_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:drawablePadding="3dp"
                        android:text="Reset filter"
                        android:textSize="12sp"
                        app:txtColor="blue"
                        app:txtStyle="softBold"
                        android:drawableTint="@color/bgBCABlue"
                        android:drawableStart="@drawable/ic_clockwise"
                        app:layout_constraintBottom_toBottomOf="@id/checkbox_net_value"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/checkbox_net_value"
                        app:txtFor="body" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </net.cachapa.expandablelayout.ExpandableLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/expand_broker_summary_filter">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/bgPrimary"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:paddingHorizontal="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:orientation="horizontal">

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Buy"
                            app:txtFor="body"
                            app:txtStyle="bold"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="BLot"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="BVal(K)"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="B.Avg"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:background="#ddeaee"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="#"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:background="#ddeaee"/>

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center"
                            android:text="Sell"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="SLot"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="SVal(K)"
                            app:txtFor="body"
                            app:txtStyle="bold" />

                        <com.bcasekuritas.mybest.widget.textview.CustomTextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:gravity="center_vertical|center"
                            android:text="S.Avg"
                            app:txtFor="body"
                            app:txtStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_broker_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/row"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:listitem="@layout/item_stock_detail_tab_broker_summary"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>



</layout>

