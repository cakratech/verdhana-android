<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vmNewsTab"
            type="com.bcasekuritas.mybest.app.feature.news.tabnews.TabNewsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_first_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_recap"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/pic_example"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_date_author_recap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                android:layout_marginTop="20dp"
                tools:text="01 Jan 2023 | BCA Sekuritas"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/iv_recap"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_title_recap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="title"
                android:layout_marginTop="5dp"
                tools:text="Week 1 August Recap"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toBottomOf="@id/tv_date_author_recap"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_not_found_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_content_news"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_marginTop="30dp"
                android:background="@color/greyish"
                android:layout_gravity="center"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_search_input_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="title"
                android:text="'KPEJ' is not found"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="body"
                android:text="'Please check entered keyword, or discover popular news this week"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/greyish"
                android:layout_marginTop="20dp"/>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:txtFor="title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Popular News"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_search_found_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:txtFor="title"
            android:visibility="gone"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Search Found (10)"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:listitem="@layout/item_list_news"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintTop_toBottomOf="@id/tv_title_recap"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>
</layout>