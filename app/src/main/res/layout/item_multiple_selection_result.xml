<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/ll_multiple_selection_result_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/rounded_stroke_0154fa_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:paddingLeft="10dp">

        <com.bcasekuritas.mybest.widget.textview.CustomTextView
            android:id="@+id/tv_multiple_selection_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            app:txtColor="blue"
            app:txtFor="normalBold"
            android:textColor="@color/brandSecondaryBlue"/>

        <ImageView
            android:id="@+id/iv_multiple_selection_result_delete"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_close"
            android:layout_marginLeft="5dp"
            app:tint="@color/brandPrimaryBCABlue" />

    </LinearLayout>

</LinearLayout>