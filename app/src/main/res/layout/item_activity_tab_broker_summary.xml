<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_board"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold"/>

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="@color/borderline"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_buy_avg"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="green"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_buy_val"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="green"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_buy_vol"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="green"
        app:txtStyle="softBold" />

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="@color/borderline"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_sell_avg"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="red"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_sell_val"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="red"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_sell_vol"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtColor="red"
        app:txtStyle="softBold" />

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="@color/borderline"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_net_val"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_net_vol"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold" />

    <View
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:background="@color/borderline"/>

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_total_val"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_total_vol"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold" />

    <com.bcasekuritas.mybest.widget.textview.CustomTextView
        android:id="@+id/tv_item_total_freq"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="-"
        app:txtFor="caption"
        app:txtStyle="softBold" />
</LinearLayout>