<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_buy_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    tools:text="BUY" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_stock_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="2dp"
                    app:txtFor="body"
                    app:txtStyle="bold"
                    tools:text="BBCA" />

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    app:txtColor="black"
                    android:layout_marginTop="2dp"
                    app:txtFor="caption"
                    tools:text="Until 30 Jun 2023" />

            </LinearLayout>

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                app:txtColor="grey"
                app:txtFor="body"
                app:txtStyle="softBold"
                tools:text="1000 LOT" />

            <com.bcasekuritas.mybest.widget.textview.CustomTextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                app:txtColor="grey"
                app:txtFor="body"
                app:txtStyle="softBold"
                tools:text="1.725" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:drawablePadding="8dp"
                    tools:drawableEnd="@drawable/ic_row_expand_up_blue"
                    app:txtColor="green"
                    app:txtFor="caption"
                    app:txtStyle="bold"
                    tools:text="matched" />


                <com.bcasekuritas.mybest.widget.textview.CustomTextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="2dp"
                    app:txtFor="body"
                    app:txtStyle="softBold"
                    tools:text="Rp135,200,000" />


            </LinearLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_merged_trade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            tools:itemCount="2"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_merge_trade_list"/>
    </LinearLayout>

</layout>

