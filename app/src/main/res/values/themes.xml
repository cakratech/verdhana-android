        <item name="colorPrimaryDark">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textInputStyle">@style/TextInputLayout.Primary</item>
        <item name="buttonStyle">@style/Button.Icon</item>

        <!-- Snack Bar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>

        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <!-- Customize your theme here. -->
        <item name="materialCalendarTheme">@style/App.DatePicker</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>

    </style>

    <style name="NoStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.Project">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.Project">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bgBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
